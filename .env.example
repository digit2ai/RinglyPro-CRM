# RinglyPro CRM - Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/ringlycrm

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this

# Multi-Client Configuration
CLIENT_ID=default
CLIENT_NAME=RinglyPro
CLIENT_DOMAIN=ringlypro.com

# Twilio Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Twilio Outbound Caller Configuration
AGENT_PHONE_NUMBER=+1234567890

# ElevenLabs Voice AI (for Rachel/Lina voice)
ELEVENLABS_API_KEY=your-elevenlabs-api-key
VOICE_ENABLED=true

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com

# GoHighLevel MCP Integration
GHL_PRIVATE_API_KEY=pit-acf324ce-7568-4d2c-adbc-6f225fc49cfe
GHL_LOCATION_ID=your-location-id-here

# Application Settings
NODE_ENV=development
PORT=3000

# Optional: MCP AI Copilot
ANTHROPIC_API_KEY=sk-ant-your-claude-api-key

# Optional: Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
