# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=store_health_ai
DB_USER=postgres
DB_PASSWORD=your_password_here

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Timezone
DEFAULT_TIMEZONE=America/New_York

# AI Voice Calling Configuration
# Choose provider: twilio or vapi
VOICE_PROVIDER=twilio

# Twilio Configuration (Option 1)
# Sign up at https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_FROM_NUMBER=+15551234567

# Base URL for Twilio webhooks (use ngrok for local development)
TWILIO_WEBHOOK_BASE_URL=https://your-domain.com

# Vapi Configuration (Option 2 - Modern AI Voice)
# Sign up at https://vapi.ai
VAPI_API_KEY=your_vapi_api_key_here
VAPI_PHONE_NUMBER_ID=your_vapi_phone_number_id
VAPI_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Alert Channels
ENABLE_SMS_ALERTS=true
ENABLE_PUSH_ALERTS=true
ENABLE_EMAIL_ALERTS=true

# Email Configuration (if using email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=Store Health AI <noreply@example.com>

# Escalation Settings
GREEN_CALL_ENABLED=false
SLA_HOURS_SALES=24
SLA_HOURS_LABOR=24
SLA_HOURS_INVENTORY=72

# Predictive Risk Thresholds
PREDICTION_YELLOW_THRESHOLD=65
PREDICTION_RED_THRESHOLD=80

# Scheduled Jobs (cron expressions)
CRON_DAILY_KPI_CALCULATION=0 1 * * *
CRON_HOURLY_ALERT_CHECK=0 * * * *
CRON_SLA_MONITORING=*/15 * * * *

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# External Data Sources (if applicable)
POS_API_URL=https://api.pos-system.com
POS_API_KEY=your_pos_api_key

INVENTORY_API_URL=https://api.inventory-system.com
INVENTORY_API_KEY=your_inventory_api_key

LABOR_API_URL=https://api.labor-system.com
LABOR_API_KEY=your_labor_api_key
