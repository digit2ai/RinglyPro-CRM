<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vagaro Integration Settings - RinglyPro</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: #f5f5f7;
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .header h1 {
            font-size: 2rem;
            color: #1d1d1f;
            margin-bottom: 0.5rem;
        }

        .header p {
            color: #6e6e73;
            font-size: 1rem;
        }

        .card {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
        }

        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e5e5e7;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1d1d1f;
        }

        .toggle {
            position: relative;
            display: inline-block;
            width: 51px;
            height: 31px;
        }

        .toggle input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 31px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 23px;
            width: 23px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider {
            background-color: #34c759;
        }

        input:checked + .slider:before {
            transform: translateX(20px);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #1d1d1f;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            font-size: 1rem;
            border: 1px solid #d2d2d7;
            border-radius: 8px;
            transition: border-color 0.2s;
        }

        .form-input:focus {
            outline: none;
            border-color: #0071e3;
        }

        .form-hint {
            color: #6e6e73;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .status-connected {
            background: #d1fae5;
            color: #065f46;
        }

        .status-disconnected {
            background: #fee2e2;
            color: #991b1b;
        }

        .status-disabled {
            background: #f3f4f6;
            color: #6b7280;
        }

        .btn {
            display: inline-block;
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-primary {
            background: #0071e3;
            color: white;
        }

        .btn-primary:hover {
            background: #0077ed;
        }

        .btn-secondary {
            background: #f5f5f7;
            color: #1d1d1f;
        }

        .btn-secondary:hover {
            background: #e8e8ed;
        }

        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            display: none;
        }

        .alert-success {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .alert-info {
            background: #dbeafe;
            color: #1e40af;
            border: 1px solid #93c5fd;
        }

        .feature-list {
            list-style: none;
            padding: 0;
        }

        .feature-list li {
            padding: 0.75rem 0;
            border-bottom: 1px solid #f5f5f7;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .feature-list li:last-child {
            border-bottom: none;
        }

        .icon {
            font-size: 1.25rem;
        }

        .setup-steps {
            background: #f5f5f7;
            padding: 1.5rem;
            border-radius: 8px;
            margin-top: 1.5rem;
        }

        .setup-steps ol {
            padding-left: 1.5rem;
        }

        .setup-steps li {
            margin-bottom: 0.75rem;
            color: #1d1d1f;
        }

        .webhook-url {
            background: #f5f5f7;
            padding: 1rem;
            border-radius: 8px;
            font-family: 'Monaco', 'Courier New', monospace;
            font-size: 0.875rem;
            word-break: break-all;
            margin-top: 0.5rem;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #0071e3;
            text-decoration: none;
            margin-bottom: 1.5rem;
        }

        .back-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/" class="back-link">
            ‚Üê Back to Dashboard
        </a>

        <div class="header">
            <h1>üè™ Vagaro Integration</h1>
            <p>Connect your Vagaro salon/spa scheduling system with RinglyPro</p>
        </div>

        <div id="alert-container"></div>

        <!-- Status Card -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Integration Status</div>
                <div id="status-badge" class="status-badge status-disabled">
                    <span>‚óè</span>
                    <span>Disabled</span>
                </div>
            </div>

            <ul class="feature-list">
                <li>
                    <span class="icon">üìÖ</span>
                    <span>Two-way appointment sync</span>
                </li>
                <li>
                    <span class="icon">üë•</span>
                    <span>Automatic customer profile sync</span>
                </li>
                <li>
                    <span class="icon">üì±</span>
                    <span>SMS confirmations & reminders (managed by Vagaro)</span>
                </li>
                <li>
                    <span class="icon">ü§ñ</span>
                    <span>Lina & Rachel voice AI integration</span>
                </li>
                <li>
                    <span class="icon">üìß</span>
                    <span>Email notifications (managed by Vagaro)</span>
                </li>
            </ul>
        </div>

        <!-- Configuration Card -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Configuration</div>
                <label class="toggle">
                    <input type="checkbox" id="enableToggle" onchange="handleToggleChange()">
                    <span class="slider"></span>
                </label>
            </div>

            <form id="vagaroForm" onsubmit="handleSaveSettings(event)">
                <div class="form-group">
                    <label class="form-label" for="clientId">Vagaro Client ID (OAuth)</label>
                    <input type="text"
                           id="clientId"
                           class="form-input"
                           placeholder="Enter your Vagaro Client ID"
                           autocomplete="off">
                    <p class="form-hint">Found in Vagaro ‚Üí Settings ‚Üí Developers ‚Üí OAuth Applications</p>
                </div>

                <div class="form-group">
                    <label class="form-label" for="clientSecretKey">Vagaro Client Secret Key (OAuth)</label>
                    <input type="password"
                           id="clientSecretKey"
                           class="form-input"
                           placeholder="Enter your Vagaro Client Secret Key"
                           autocomplete="off">
                    <p class="form-hint">OAuth secret key for API authentication</p>
                </div>

                <div class="form-group">
                    <label class="form-label" for="merchantId">Vagaro Merchant ID</label>
                    <input type="text"
                           id="merchantId"
                           class="form-input"
                           placeholder="Enter your Vagaro Merchant ID"
                           autocomplete="off">
                    <p class="form-hint">Your unique business identifier in Vagaro</p>
                </div>

                <div class="form-group">
                    <label class="form-label" for="webhookToken">Webhook Verification Token</label>
                    <input type="text"
                           id="webhookToken"
                           class="form-input"
                           placeholder="Enter your webhook verification token"
                           autocomplete="off">
                    <p class="form-hint">Used to verify webhook authenticity</p>
                </div>

                <div class="form-group">
                    <label class="form-label" for="region">Vagaro API Region</label>
                    <select id="region" class="form-input">
                        <option value="us01">US-01 (Default)</option>
                        <option value="us02">US-02</option>
                        <option value="us03">US-03</option>
                        <option value="us04">US-04</option>
                        <option value="us05">US-05</option>
                    </select>
                    <p class="form-hint">Select your Vagaro API region (usually us01)</p>
                </div>

                <div style="display: flex; gap: 1rem;">
                    <button type="submit" class="btn btn-primary">Save Settings</button>
                    <button type="button" class="btn btn-secondary" onclick="testConnection()">Test Connection</button>
                </div>
            </form>
        </div>

        <!-- Webhook Setup Card -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Webhook Configuration</div>
            </div>

            <p style="color: #6e6e73; margin-bottom: 1.5rem;">
                Configure these webhook URLs in your Vagaro dashboard to receive real-time updates.
            </p>

            <div class="form-group">
                <label class="form-label">Unified Webhook URL</label>
                <div class="webhook-url" id="webhookUrl">
                    <%= APP_URL || 'https://aiagent.ringlypro.com' %>/api/mcp/webhooks/vagaro
                </div>
                <p class="form-hint">Use this single URL for all Vagaro webhook events</p>
            </div>

            <div class="form-group">
                <label class="form-label">Recommended Events to Subscribe</label>
                <ul style="padding-left: 1.25rem; color: #6e6e73; font-size: 0.9rem;">
                    <li>appointment.created, appointment.updated, appointment.cancelled</li>
                    <li>customer.created, customer.updated</li>
                    <li>transaction.created (optional)</li>
                </ul>
            </div>

            <div class="setup-steps">
                <strong>Setup Steps:</strong>
                <ol>
                    <li>Go to Vagaro ‚Üí Settings ‚Üí Developers ‚Üí APIs & Webhooks</li>
                    <li>Click "Create Webhook"</li>
                    <li>Paste the webhook URL above</li>
                    <li>Select the events you want to receive</li>
                    <li>Copy the verification token Vagaro provides</li>
                    <li>Paste the token in the "Webhook Verification Token" field on this page</li>
                    <li>Click "Save Settings"</li>
                </ol>
            </div>
        </div>

        <!-- Help Card -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Need Help?</div>
            </div>

            <p style="color: #6e6e73; margin-bottom: 1rem;">
                Vagaro integration requires an Enterprise account with API access enabled.
            </p>

            <div class="alert alert-info" style="display: block;">
                <strong>üìû Contact Vagaro Enterprise Sales:</strong><br>
                Email: enterprise@vagaro.com<br>
                Tell them: "I want to enable APIs & Webhooks for my RinglyPro integration"
            </div>

            <p style="color: #6e6e73; margin-top: 1rem;">
                <a href="/docs/VAGARO_INTEGRATION.md" target="_blank" style="color: #0071e3; text-decoration: none;">
                    View complete integration guide ‚Üí
                </a>
            </p>
        </div>
    </div>

    <script>
        // Get auth token (stored as 'token' from login)
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/login';
        }

        // Load current settings
        async function loadSettings() {
            try {
                const response = await fetch('/api/client-settings/vagaro', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();
                if (data.success && data.vagaro) {
                    const vagaro = data.vagaro;

                    document.getElementById('enableToggle').checked = vagaro.enabled || false;

                    // Show masked placeholders for set credentials
                    if (vagaro.clientIdSet) {
                        document.getElementById('clientId').placeholder = 'Client ID is set (enter new value to change)';
                    }
                    if (vagaro.clientSecretKeySet) {
                        document.getElementById('clientSecretKey').placeholder = 'Secret is set (enter new value to change)';
                    }
                    if (vagaro.webhookTokenSet) {
                        document.getElementById('webhookToken').placeholder = 'Token is set (enter new value to change)';
                    }

                    // Safe values to show
                    document.getElementById('merchantId').value = vagaro.merchantId || '';
                    document.getElementById('region').value = vagaro.region || 'us01';

                    updateStatus(vagaro);
                }
            } catch (error) {
                console.error('Failed to load settings:', error);
                showAlert('Failed to load settings', 'error');
            }
        }

        // Handle toggle change
        function handleToggleChange() {
            const enabled = document.getElementById('enableToggle').checked;
            const inputs = document.querySelectorAll('.form-input');

            inputs.forEach(input => {
                input.disabled = !enabled;
            });
        }

        // Save settings
        async function handleSaveSettings(event) {
            event.preventDefault();

            const enabled = document.getElementById('enableToggle').checked;
            const clientIdValue = document.getElementById('clientId').value.trim();
            const clientSecretKeyValue = document.getElementById('clientSecretKey').value.trim();
            const merchantId = document.getElementById('merchantId').value.trim();
            const webhookTokenValue = document.getElementById('webhookToken').value.trim();
            const region = document.getElementById('region').value;

            // Validate required field
            if (!merchantId) {
                showAlert('Merchant ID is required', 'error');
                return;
            }

            try {
                const response = await fetch('/api/client-settings/vagaro', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({
                        enabled,
                        // Only send if user entered new values
                        clientId: clientIdValue || null,
                        clientSecretKey: clientSecretKeyValue || null,
                        merchantId,
                        webhookToken: webhookTokenValue || null,
                        region
                    })
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('Settings saved successfully!', 'success');
                    loadSettings(); // Reload to show updated status
                } else {
                    showAlert(data.error || 'Failed to save settings', 'error');
                }
            } catch (error) {
                console.error('Save error:', error);
                showAlert('Failed to save settings', 'error');
            }
        }

        // Test connection
        async function testConnection() {
            showAlert('Testing connection...', 'info');

            try {
                const response = await fetch('/api/client-settings/vagaro/test', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('Connection successful! Vagaro API is accessible.', 'success');
                } else {
                    showAlert('Connection failed: ' + (data.error || 'Unknown error'), 'error');
                }
            } catch (error) {
                console.error('Test error:', error);
                showAlert('Failed to test connection', 'error');
            }
        }

        // Update status badge
        function updateStatus(vagaro) {
            const badge = document.getElementById('status-badge');
            const enabled = vagaro.enabled;
            const configured = vagaro.credentialsSet;

            if (enabled && configured) {
                badge.className = 'status-badge status-connected';
                badge.innerHTML = '<span>&#9679;</span><span>Connected</span>';
            } else if (enabled && !configured) {
                badge.className = 'status-badge status-disconnected';
                badge.innerHTML = '<span>&#9679;</span><span>Needs Configuration</span>';
            } else {
                badge.className = 'status-badge status-disabled';
                badge.innerHTML = '<span>&#9679;</span><span>Disabled</span>';
            }
        }

        // Show alert
        function showAlert(message, type) {
            const container = document.getElementById('alert-container');
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type}`;
            alertDiv.style.display = 'block';
            alertDiv.textContent = message;
            container.innerHTML = '';
            container.appendChild(alertDiv);

            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }

        // Initialize
        loadSettings();
        handleToggleChange();
    </script>
</body>
</html>
