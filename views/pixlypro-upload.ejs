<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PixlyPro Photo Studio - Processing Your Photos</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .processing-container {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            padding: 3rem;
            text-align: center;
            max-width: 600px;
            width: 100%;
        }

        .status-icon {
            font-size: 4rem;
            margin-bottom: 1.5rem;
        }

        h1 {
            color: #1e293b;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        p {
            color: #64748b;
            font-size: 1.125rem;
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .loading-spinner {
            display: inline-block;
            width: 50px;
            height: 50px;
            border: 5px solid #e2e8f0;
            border-top-color: #3b82f6;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 1rem 0;
        }

        @keyframes spin {
            to { transform: rotate(360deg); }
        }

        .progress-container {
            background: #f1f5f9;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin: 1.5rem 0;
        }

        .progress-bar {
            width: 100%;
            height: 12px;
            background: #e2e8f0;
            border-radius: 6px;
            overflow: hidden;
            margin-bottom: 0.75rem;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
            transition: width 0.3s ease;
            border-radius: 6px;
        }

        .progress-text {
            color: #64748b;
            font-size: 0.875rem;
        }

        .btn {
            display: inline-block;
            padding: 0.875rem 2rem;
            background: #3b82f6;
            color: white;
            text-decoration: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
            margin-top: 1rem;
        }

        .btn:hover {
            background: #2563eb;
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
        }

        .error-message {
            background: #fef2f2;
            border: 1px solid #ef4444;
            border-radius: 0.5rem;
            padding: 1rem;
            color: #991b1b;
            margin: 1rem 0;
        }

        .warning-message {
            background: #fffbeb;
            border: 1px solid #f59e0b;
            border-radius: 0.5rem;
            padding: 1rem;
            color: #92400e;
            margin: 1rem 0;
            font-size: 0.875rem;
        }
    </style>
</head>
<body>
    <div class="processing-container">
        <div class="status-icon" id="statusIcon">‚ú®</div>
        <h1 id="statusTitle">Payment Successful!</h1>
        <p id="statusMessage">Preparing to upload and enhance your photos...</p>

        <div class="loading-spinner" id="spinner"></div>

        <div class="progress-container" id="progressContainer" style="display: none;">
            <div class="progress-bar">
                <div class="progress-fill" id="progressFill" style="width: 0%"></div>
            </div>
            <div class="progress-text" id="progressText">Uploading photos...</div>
        </div>

        <div id="errorContainer" style="display: none;"></div>

        <a href="/pixlypro-portal" class="btn" id="dashboardBtn" style="display: none;">Go to Dashboard</a>
    </div>

    <script>
        // =====================================================
        // IndexedDB - Same config as studio page
        // =====================================================
        const DB_NAME = 'PixlyProPhotos';
        const DB_VERSION = 1;
        const STORE_NAME = 'photos';
        let db = null;

        async function initDB() {
            return new Promise((resolve, reject) => {
                const request = indexedDB.open(DB_NAME, DB_VERSION);
                request.onerror = () => reject(request.error);
                request.onsuccess = () => {
                    db = request.result;
                    resolve(db);
                };
                request.onupgradeneeded = (event) => {
                    const database = event.target.result;
                    if (!database.objectStoreNames.contains(STORE_NAME)) {
                        database.createObjectStore(STORE_NAME, { keyPath: 'id' });
                    }
                };
            });
        }

        async function getPhotosFromDB() {
            return new Promise((resolve, reject) => {
                const transaction = db.transaction([STORE_NAME], 'readonly');
                const store = transaction.objectStore(STORE_NAME);
                const request = store.getAll();
                request.onsuccess = () => resolve(request.result);
                request.onerror = () => reject(request.error);
            });
        }

        async function clearPhotosFromDB() {
            return new Promise((resolve, reject) => {
                const transaction = db.transaction([STORE_NAME], 'readwrite');
                const store = transaction.objectStore(STORE_NAME);
                const request = store.clear();
                request.onsuccess = () => resolve();
                request.onerror = () => reject(request.error);
            });
        }

        // =====================================================
        // UI Helpers
        // =====================================================
        function updateStatus(icon, title, message) {
            document.getElementById('statusIcon').textContent = icon;
            document.getElementById('statusTitle').textContent = title;
            document.getElementById('statusMessage').textContent = message;
        }

        function showProgress(percent, text) {
            document.getElementById('progressContainer').style.display = 'block';
            document.getElementById('progressFill').style.width = `${percent}%`;
            document.getElementById('progressText').textContent = text;
        }

        function hideSpinner() {
            document.getElementById('spinner').style.display = 'none';
        }

        function showError(message) {
            hideSpinner();
            document.getElementById('progressContainer').style.display = 'none';
            document.getElementById('errorContainer').innerHTML = `<div class="error-message">${message}</div>`;
            document.getElementById('errorContainer').style.display = 'block';
            document.getElementById('dashboardBtn').style.display = 'inline-block';
        }

        function showSuccess() {
            hideSpinner();
            document.getElementById('progressContainer').style.display = 'none';
            document.getElementById('dashboardBtn').style.display = 'inline-block';
        }

        // =====================================================
        // Main Processing Logic
        // =====================================================
        async function processAfterPayment() {
            const urlParams = new URLSearchParams(window.location.search);
            const sessionId = urlParams.get('session_id');
            const orderId = urlParams.get('order_id') || sessionStorage.getItem('pixlypro_order_id');
            const canceled = urlParams.get('canceled');

            // Handle canceled payment
            if (canceled === 'true') {
                updateStatus('‚ö†Ô∏è', 'Payment Canceled', 'Your payment was canceled. You can try again from the Photo Studio.');
                hideSpinner();
                document.getElementById('dashboardBtn').href = '/photo-studio';
                document.getElementById('dashboardBtn').textContent = 'Back to Photo Studio';
                document.getElementById('dashboardBtn').style.display = 'inline-block';
                return;
            }

            if (!orderId) {
                showError('No order found. Please try again from the Photo Studio.');
                return;
            }

            try {
                const token = localStorage.getItem('pixlypro_token');
                if (!token) {
                    showError('Authentication required. Please log in again.');
                    setTimeout(() => {
                        window.location.href = '/pixlypro-auth';
                    }, 2000);
                    return;
                }

                // Step 1: Verify payment with Stripe
                updateStatus('üí≥', 'Verifying Payment...', 'Confirming your payment with Stripe...');

                const verifyResponse = await fetch(`/api/pixlypro/verify-payment?session_id=${sessionId}&order_id=${orderId}`, {
                    headers: { 'Authorization': `Bearer ${token}` }
                });
                const verifyData = await verifyResponse.json();

                if (!verifyData.success) {
                    showError('Payment verification failed. Please contact support.');
                    return;
                }

                // Step 2: Get photos from IndexedDB
                updateStatus('üì¶', 'Preparing Photos...', 'Loading your photos from browser storage...');

                await initDB();
                const storedPhotos = await getPhotosFromDB();

                if (storedPhotos.length === 0) {
                    // No photos in IndexedDB - check if they might already be processed
                    updateStatus('‚ö†Ô∏è', 'No Photos Found', 'No photos found in browser storage. They may have already been processed.');
                    document.getElementById('errorContainer').innerHTML = `
                        <div class="warning-message">
                            If you closed your browser or cleared data before processing completed,
                            please contact support with your Order #${orderId}.
                        </div>
                    `;
                    document.getElementById('errorContainer').style.display = 'block';
                    hideSpinner();
                    document.getElementById('dashboardBtn').style.display = 'inline-block';
                    return;
                }

                // Step 3: Upload photos to S3 and enhance
                updateStatus('üöÄ', 'Uploading & Enhancing...', `Processing ${storedPhotos.length} photo${storedPhotos.length > 1 ? 's' : ''}...`);
                showProgress(0, `Uploading photo 1 of ${storedPhotos.length}...`);

                const formData = new FormData();
                formData.append('orderId', orderId);

                for (let i = 0; i < storedPhotos.length; i++) {
                    const photo = storedPhotos[i];
                    // Convert blob to File
                    const file = new File([photo.blob], photo.name, { type: photo.type || 'image/png' });
                    formData.append('photos', file);

                    const percent = Math.round(((i + 1) / storedPhotos.length) * 30);
                    showProgress(percent, `Preparing photo ${i + 1} of ${storedPhotos.length}...`);
                }

                showProgress(35, 'Uploading to server...');

                // Upload and enhance in one call
                const processResponse = await fetch('/api/pixlypro/upload-and-enhance', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    },
                    body: formData
                });

                const processData = await processResponse.json();

                if (!processData.success) {
                    throw new Error(processData.error || 'Failed to process photos');
                }

                // Step 4: Clear IndexedDB
                showProgress(95, 'Cleaning up...');
                await clearPhotosFromDB();
                sessionStorage.removeItem('pixlypro_order_id');

                // Step 5: Success!
                showProgress(100, 'Complete!');
                updateStatus('‚úÖ', 'Photos Enhanced!', `Successfully enhanced ${processData.processedCount} photo${processData.processedCount > 1 ? 's' : ''}! Your enhanced photos are ready.`);
                showSuccess();

                // Auto-redirect after 3 seconds
                setTimeout(() => {
                    window.location.href = '/pixlypro-portal';
                }, 3000);

            } catch (error) {
                console.error('Processing error:', error);
                updateStatus('‚ùå', 'Processing Error', 'An error occurred while processing your photos.');
                showError(error.message || 'Please contact support if this persists.');
            }
        }

        // Start processing when page loads
        document.addEventListener('DOMContentLoaded', processAfterPayment);
    </script>
</body>
</html>
