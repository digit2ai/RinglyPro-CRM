        function updateColorDisplay(colorType) {
            // Color dropdowns already show the color and hex code
        }

        async function submitStorefront() {
            const form = document.getElementById('create-form');
            const formData = new FormData(form);

            const submitBtn = document.getElementById('submit-btn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Creating...';

            try {
                const businessName = formData.get('businessName');
                const businessSlug = formData.get('businessSlug');
                const businessType = formData.get('businessType');
                const websiteUrl = formData.get('websiteUrl');
                const tagline = formData.get('tagline');
                const description = formData.get('description');
                const primaryColor = formData.get('primaryColor');
                const secondaryColor = formData.get('secondaryColor');

                // Build storefront data based on whether they have a website
                const storefrontData = {
                    businessName,
                    businessSlug,
                    businessType,
                    subscriptionPlan: formData.get('subscriptionPlan')
                };

                // If they have a website URL, send it for AI import
                if (websiteUrl && websiteUrl.trim()) {
                    storefrontData.websiteUrl = websiteUrl.trim();
                } else {
                    // No website - create a design brief from manual inputs
                    storefrontData.designBrief = `Create a ${businessType} storefront called "${businessName}".
Tagline: ${tagline || 'A great place to shop'}
Description: ${description || 'Quality products and services'}
Brand Colors: Primary ${primaryColor || '#FF914D'}, Secondary ${secondaryColor || '#87CEEB'}`;
                }

                // Get authentication token
                const token = localStorage.getItem('ordergopro_token');
                if (!token) {
                    alert('Please log in to create a storefront');
                    window.location.href = '/ordergopro/login';
                    return;
                }

                // Call the actual API to create storefront
                console.log('Creating storefront with data:', storefrontData);

                const response = await fetch('/api/ordergopro/storefronts/create', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(storefrontData)
                });

                console.log('Response status:', response.status);
                const result = await response.json();
                console.log('Response data:', result);

                if (result.success) {
                    // Auto-refresh the storefront list BEFORE showing alert
                    console.log('Refreshing storefront list...');
                    await loadStorefronts();
                    console.log('Storefront list refreshed');

                    // Close modal
                    closeCreateModal();

                    // Show success message
                    alert(`‚úÖ Storefront "${businessName}" is being created!\n\n‚è≥ AI is extracting menu items and branding from your website. This takes 1-2 minutes.\n\nYou can monitor progress in the dashboard. The storefront will be published automatically when ready.`);
                } else {
                    const errorMsg = result.error || result.message || 'Unknown error';
                    console.error('Storefront creation failed:', errorMsg);
                    alert('Error creating storefront: ' + errorMsg + '\n\nPlease check the console for details.');
                }
            } catch (error) {
                console.error('Exception during storefront creation:', error);
                alert('Error creating storefront: ' + error.message + '\n\nPlease check the console for details.');
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'üöÄ Create Storefront';
            }
        }

        // Storefront Actions
        function viewStorefront(slug) {
            window.open(`/storefront/${slug}`, '_blank');
        }

        function editStorefront(id) {
            alert(`Edit storefront ${id} - Feature coming soon!`);
        }

        // Slug Generation & Validation
        const slugInput = document.querySelector('input[name="businessSlug"]');
        const businessNameInput = document.querySelector('input[name="businessName"]');

        // Function to generate clean slug
        function generateSlug(text) {
            return text
                .toLowerCase()
                .replace(/[^a-z0-9]+/g, '-')  // Replace non-alphanumeric with hyphens
                .replace(/^-+|-+$/g, '')       // Remove leading/trailing hyphens
                .replace(/-+/g, '-');          // Replace multiple hyphens with single
        }

        // Auto-generate slug from business name
        businessNameInput?.addEventListener('input', (e) => {
            if (slugInput && !slugInput.dataset.userModified) {
                const autoSlug = generateSlug(e.target.value);
                slugInput.value = autoSlug;
                document.getElementById('slug-preview').textContent = autoSlug || 'your-slug';
            }
        });

        // Clean slug as user types & mark as user-modified
        slugInput?.addEventListener('input', (e) => {
            slugInput.dataset.userModified = 'true';
            const cleanSlug = generateSlug(e.target.value);
            if (e.target.value !== cleanSlug) {
                e.target.value = cleanSlug;
            }
            document.getElementById('slug-preview').textContent = cleanSlug || 'your-slug';
        });

        // Color Picker Sync
        document.querySelectorAll('input[type="color"]').forEach(input => {
            input.addEventListener('input', (e) => {
                e.target.nextElementSibling.value = e.target.value;
            });
        });

        // Initialize
        loadUserInfo();
        loadStorefronts();
