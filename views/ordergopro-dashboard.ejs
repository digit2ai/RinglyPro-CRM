    <script>
        let currentStep = 1;
        let storefronts = [];

        // Load storefronts on page load
        async function loadStorefronts() {
            try {
                // Get authentication token
                const token = localStorage.getItem('ordergopro_token');
                if (!token) {
                    console.log('No authentication token found');
                    storefronts = [];
                    renderStorefronts(storefronts);
                    updateStats(storefronts);
                    return;
                }

                console.log('Loading storefronts from API...');

                // Fetch storefronts from API
                const response = await fetch('/api/ordergopro/storefronts', {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                console.log('Storefronts API response status:', response.status);

                if (response.ok) {
                    const result = await response.json();
                    console.log('Storefronts loaded:', result);
                    storefronts = result.storefronts || [];
                    console.log('Number of storefronts:', storefronts.length);
                } else {
                    const errorText = await response.text();
                    console.error('Failed to load storefronts:', response.status, errorText);
                    storefronts = [];
                }

                renderStorefronts(storefronts);
                updateStats(storefronts);
            } catch (error) {
                console.error('Error loading storefronts:', error);
                storefronts = [];
                renderStorefronts(storefronts);
                updateStats(storefronts);
            }
        }

        // Load user information
        async function loadUserInfo() {
            try {
                const token = localStorage.getItem('ordergopro_token');
                if (!token) {
                    return;
                }

                const response = await fetch('/api/ordergopro/me', {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result.success && result.client) {
                        document.getElementById('user-name').textContent =
                            `${result.client.firstName} ${result.client.lastName}`;
                        document.getElementById('user-id').textContent = result.client.id;
                        document.getElementById('user-plan').textContent =
                            result.client.plan.charAt(0).toUpperCase() + result.client.plan.slice(1);
                        document.getElementById('user-info').style.display = 'block';
                    }
                }
            } catch (error) {
                console.error('Error loading user info:', error);
            }
        }

        function renderStorefronts(storefronts) {
            const container = document.getElementById('storefronts-container');

            if (storefronts.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üè™</div>
                        <h3>No Storefronts Yet</h3>
                        <p>Create your first storefront to get started</p>
                        <button class="btn btn-primary" onclick="openCreateModal()">
                            ‚ûï Create Your First Storefront
                        </button>
                    </div>
                `;
                return;
            }

            container.innerHTML = `
                <div class="storefronts-grid">
                    ${storefronts.map(storefront => `
                        <div class="storefront-card">
                            <div class="storefront-preview" style="background: linear-gradient(135deg, ${storefront.primary_color || '#6366f1'}, ${storefront.secondary_color || '#8b5cf6'});">
                                ${storefront.logo_url ? `<img src="${storefront.logo_url}" alt="${storefront.business_name}" class="storefront-logo">` : `<span style="color: white; font-size: 2rem;">üè™</span>`}
                                <span class="storefront-status ${storefront.is_published ? 'status-active' : 'status-draft'}">
                                    ${storefront.is_published ? 'Live' : 'Draft'}
                                </span>
                            </div>
                            <div class="storefront-content">
                                <div class="storefront-name">${storefront.business_name}</div>
                                <div class="storefront-slug">aiagent.ringlypro.com/storefront/${storefront.business_slug}</div>
                                <div class="storefront-stats">
                                    <div class="storefront-stat">
                                        <div class="storefront-stat-value">${storefront.total_items || 0}</div>
                                        <div class="storefront-stat-label">Items</div>
                                    </div>
                                    <div class="storefront-stat">
                                        <div class="storefront-stat-value">${parseInt(storefront.total_orders) || 0}</div>
                                        <div class="storefront-stat-label">Orders</div>
                                    </div>
                                    <div class="storefront-stat">
                                        <div class="storefront-stat-value">$${parseFloat(storefront.total_revenue || 0).toFixed(0)}</div>
                                        <div class="storefront-stat-label">Revenue</div>
                                    </div>
                                </div>
                                <div class="storefront-actions">
                                    <button class="btn btn-secondary btn-small" onclick="viewStorefront('${storefront.business_slug}')">
                                        üëÅÔ∏è View
                                    </button>
                                    <button class="btn btn-primary btn-small" onclick="editStorefront(${storefront.id})">
                                        ‚úèÔ∏è Edit
                                    </button>
                                </div>
                            </div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function updateStats(storefronts) {
            const totalStorefronts = storefronts.length;
            const totalOrders = storefronts.reduce((sum, s) => sum + parseInt(s.total_orders || 0, 10), 0);
            const totalRevenue = storefronts.reduce((sum, s) => sum + parseFloat(s.total_revenue || 0), 0);

            document.getElementById('total-storefronts').textContent = totalStorefronts;
            document.getElementById('total-orders').textContent = totalOrders;
            document.getElementById('total-revenue').textContent = `$${totalRevenue.toFixed(2)}`;
            document.getElementById('total-customers').textContent = '0'; // Would come from CRM
        }

        // Modal Functions
        function openCreateModal() {
            document.getElementById('create-modal').classList.add('active');
            currentStep = 1;
            showStep(1);

            // Auto-select subscription plan from signup
            const savedPlan = localStorage.getItem('ordergopro_plan');
            if (savedPlan) {
                const planSelect = document.getElementById('subscriptionPlanSelect');
                if (planSelect) {
                    planSelect.value = savedPlan;
                }
            }
        }

        function closeCreateModal() {
            document.getElementById('create-modal').classList.remove('active');
            document.getElementById('create-form').reset();
        }

        function showStep(step) {
            // Hide all steps
            for (let i = 1; i <= 3; i++) {
                document.getElementById(`form-step-${i}`).style.display = 'none';
                document.getElementById(`step-${i}`).classList.remove('active', 'completed');
            }

            // Show current step
            document.getElementById(`form-step-${step}`).style.display = 'block';
            document.getElementById(`step-${step}`).classList.add('active');

            // Mark previous steps as completed
            for (let i = 1; i < step; i++) {
                document.getElementById(`step-${i}`).classList.add('completed');
            }

            // Update buttons
            document.getElementById('prev-btn').style.display = step > 1 ? 'block' : 'none';
            document.getElementById('next-btn').style.display = step < 3 ? 'block' : 'none';
            document.getElementById('submit-btn').style.display = step === 3 ? 'block' : 'none';
        }

        function nextStep() {
            if (currentStep < 3) {
                currentStep++;
                showStep(currentStep);
            }
        }

        function previousStep() {
            if (currentStep > 1) {
                currentStep--;
                showStep(currentStep);
            }
        }

        // Toggle website input visibility
        function toggleWebsiteInput() {
            const checkbox = document.getElementById('noWebsiteCheckbox');
            const urlGroup = document.getElementById('websiteUrlGroup');
            const aiGroup = document.getElementById('aiImportGroup');
            const urlInput = document.getElementById('websiteUrlInput');

            if (checkbox.checked) {
                urlGroup.style.display = 'none';
                aiGroup.style.display = 'none';
                urlInput.value = '';
                urlInput.required = false;
            } else {
                urlGroup.style.display = 'block';
                aiGroup.style.display = 'block';
            }
        }

        // Format website URL to add https:// if missing
        function formatWebsiteUrl() {
            const urlInput = document.getElementById('websiteUrlInput');
            let url = urlInput.value.trim();

            if (url && !url.startsWith('http://') && !url.startsWith('https://')) {
                // Add https:// prefix
                url = 'https://' + url;
                urlInput.value = url;
            }

            // Toggle branding fields based on URL presence
            toggleBrandingFields(!!url);
        }

        // Grey out branding fields when URL is provided
        function toggleBrandingFields(hasUrl) {
            const taglineInput = document.querySelector('input[name="tagline"]');
            const descriptionTextarea = document.querySelector('textarea[name="description"]');
            const primaryColorSelect = document.getElementById('primaryColorSelect');
            const secondaryColorSelect = document.getElementById('secondaryColorSelect');

            if (hasUrl) {
                // Disable branding fields when URL is provided (AI will extract)
                taglineInput.disabled = true;
                descriptionTextarea.disabled = true;
                primaryColorSelect.disabled = true;
                secondaryColorSelect.disabled = true;
                taglineInput.style.backgroundColor = '#f3f4f6';
                descriptionTextarea.style.backgroundColor = '#f3f4f6';
                primaryColorSelect.style.backgroundColor = '#f3f4f6';
                secondaryColorSelect.style.backgroundColor = '#f3f4f6';
            } else {
                // Enable branding fields for manual customization
                taglineInput.disabled = false;
                descriptionTextarea.disabled = false;
                primaryColorSelect.disabled = false;
                secondaryColorSelect.disabled = false;
                taglineInput.style.backgroundColor = '';
                descriptionTextarea.style.backgroundColor = '';
                primaryColorSelect.style.backgroundColor = '';
                secondaryColorSelect.style.backgroundColor = '';
            }
        }

