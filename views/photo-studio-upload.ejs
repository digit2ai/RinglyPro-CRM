    <script>
        // Photo storage (in browser memory)
        let photos = [];
        let photoUrls = {};

        // Check if demo mode
        const urlParams = new URLSearchParams(window.location.search);
        const isDemo = urlParams.get('demo') === 'true';

        // Pricing calculation
        function calculatePrice(photoCount) {
            if (photoCount <= 0) return { total: 0, breakdown: [] };

            // Demo mode: $1 for 1 photo only
            if (isDemo) {
                return {
                    total: 1,
                    breakdown: [{ tier: 'Demo (1 photo)', count: Math.min(photoCount, 1), rate: null, amount: 1 }]
                };
            }

            if (photoCount <= 10) return {
                total: 150,
                breakdown: [{ tier: 'Base (1-10 photos)', count: photoCount, rate: null, amount: 150 }]
            };

            let total = 150;
            let breakdown = [{ tier: 'Base (1-10 photos)', count: 10, rate: null, amount: 150 }];
            let remaining = photoCount - 10;

            // Photos 11-20: $12/photo
            if (remaining > 0) {
                const tier1Count = Math.min(remaining, 10);
                const tier1Amount = tier1Count * 12;
                total += tier1Amount;
                breakdown.push({ tier: 'Photos 11-20', count: tier1Count, rate: 12, amount: tier1Amount });
                remaining -= tier1Count;
            }

            // Photos 21-40: $10/photo
            if (remaining > 0) {
                const tier2Count = Math.min(remaining, 20);
                const tier2Amount = tier2Count * 10;
                total += tier2Amount;
                breakdown.push({ tier: 'Photos 21-40', count: tier2Count, rate: 10, amount: tier2Amount });
                remaining -= tier2Count;
            }

            // Photos 41+: $8/photo
            if (remaining > 0) {
                const tier3Amount = remaining * 8;
                total += tier3Amount;
                breakdown.push({ tier: 'Photos 41+', count: remaining, rate: 8, amount: tier3Amount });
            }

            return { total, breakdown };
        }

        // Update cart display
        function updateCart() {
            const photoCount = photos.length;
            const pricing = calculatePrice(photoCount);

            // Update photo count badge
            document.getElementById('photo-count-badge').textContent = `${photoCount} photo${photoCount !== 1 ? 's' : ''}`;

            // Update price breakdown
            const priceTiersDiv = document.getElementById('price-tiers');
            if (photoCount === 0) {
                priceTiersDiv.innerHTML = `
                    <div class="price-tier">
                        <span>No photos yet</span>
                        <span>$0</span>
                    </div>
                `;
            } else {
                priceTiersDiv.innerHTML = pricing.breakdown.map(tier => `
                    <div class="price-tier active">
                        <div class="tier-info">
                            <span>${tier.tier}</span>
                            ${tier.rate ? `<span class="tier-rate">${tier.count} Ã— $${tier.rate}</span>` : ''}
                        </div>
                        <span>$${tier.amount}</span>
                    </div>
                `).join('');
            }

            // Update summary
            document.getElementById('summary-photos').textContent = photoCount;
            document.getElementById('summary-receive').textContent = photoCount; // 1:1 ratio
            document.getElementById('summary-total').textContent = `$${pricing.total}`;
            document.getElementById('checkout-price').textContent = `$${pricing.total}`;

            // Update checkout button
            const checkoutBtn = document.getElementById('checkout-btn');
            checkoutBtn.disabled = photoCount === 0;
        }

        // Render photos grid
        function renderPhotosGrid() {
            const grid = document.getElementById('photos-grid');

            if (photos.length === 0) {
                grid.innerHTML = `
                    <div class="empty-photos">
                        <p>No photos added yet</p>
                        <p style="font-size: 0.75rem; margin-top: 0.5rem;">Upload photos to see them here</p>
                    </div>
                `;
                return;
            }

            grid.innerHTML = photos.map((photo, index) => `
                <div class="photo-item" data-index="${index}">
                    <img src="${photoUrls[index]}" alt="${photo.name}">
                    <button class="remove-btn" onclick="removePhoto(${index})">Ã—</button>
                    <div class="photo-name">${photo.name}</div>
                </div>
            `).join('');
        }

        // Add photos
        function addPhotos(files) {
            const maxSize = 25 * 1024 * 1024; // 25MB
            const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/heic', 'image/heif', 'image/webp'];

            // Demo mode: limit to 1 photo
            if (isDemo && photos.length >= 1) {
                alert('Demo mode is limited to 1 photo. Upgrade to upload more photos!');
                return;
            }

            Array.from(files).forEach(file => {
                // Demo mode: only add 1 photo
                if (isDemo && photos.length >= 1) {
                    return;
                }

                // Validate type
                if (!validTypes.includes(file.type.toLowerCase())) {
                    alert(`${file.name} is not a supported image type`);
                    return;
                }

                // Validate size
                if (file.size > maxSize) {
                    alert(`${file.name} is too large (max 25MB)`);
                    return;
                }

                // Add to photos array
                const index = photos.length;
                photos.push(file);
                photoUrls[index] = URL.createObjectURL(file);
            });

            renderPhotosGrid();
            updateCart();
        }

        // Remove photo
        function removePhoto(index) {
            // Revoke object URL to free memory
            URL.revokeObjectURL(photoUrls[index]);

            // Remove from arrays
            photos.splice(index, 1);

            // Rebuild photoUrls with new indices
            const newPhotoUrls = {};
            photos.forEach((photo, i) => {
                if (i >= index) {
                    // Revoke old URL and create new one for shifted items
                    if (photoUrls[i + 1]) {
                        URL.revokeObjectURL(photoUrls[i + 1]);
                    }
                    newPhotoUrls[i] = URL.createObjectURL(photo);
                } else {
                    newPhotoUrls[i] = photoUrls[i];
                }
            });
            photoUrls = newPhotoUrls;

            renderPhotosGrid();
            updateCart();
        }

        // Setup drag and drop
        const uploadZone = document.getElementById('upload-zone');
        const fileInput = document.getElementById('file-input');

        uploadZone.addEventListener('click', () => fileInput.click());

        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('drag-over');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('drag-over');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('drag-over');
            addPhotos(e.dataTransfer.files);
        });

        fileInput.addEventListener('change', (e) => {
            addPhotos(e.target.files);
            fileInput.value = ''; // Reset input
        });

        // Checkout
        document.getElementById('checkout-btn').addEventListener('click', async () => {
            if (photos.length === 0) return;

            const token = localStorage.getItem('authToken') || sessionStorage.getItem('authToken');
            if (!token) {
                // Store photos info and redirect to auth
                sessionStorage.setItem('pendingPhotoCount', photos.length);
                window.location.href = '/photo-studio-auth?redirect=/photo-studio-upload';
                return;
            }

            // Show loading
            const loadingOverlay = document.getElementById('loading-overlay');
            loadingOverlay.classList.add('active');
            document.getElementById('loading-title').textContent = 'Creating checkout...';
            document.getElementById('loading-message').textContent = 'Please wait while we prepare your order';

            try {
                // Create checkout session
                const response = await fetch('/api/photo-studio/create-cart-checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ photo_count: photos.length, is_demo: isDemo })
                });

                const data = await response.json();

                if (!data.success) {
                    throw new Error(data.error || 'Failed to create checkout');
                }

                // Store photos in IndexedDB for retrieval after payment
                await storePhotosInIndexedDB(data.session_id, photos);

                // Redirect to Stripe
                window.location.href = data.checkout_url;

            } catch (error) {
                console.error('Checkout error:', error);
                alert('Failed to create checkout: ' + error.message);
                loadingOverlay.classList.remove('active');
            }
        });

        // IndexedDB functions for photo persistence
        function openPhotoDB() {
            return new Promise((resolve, reject) => {
                const request = indexedDB.open('PhotoStudioDB', 1);

                request.onerror = () => reject(request.error);
                request.onsuccess = () => resolve(request.result);

                request.onupgradeneeded = (e) => {
                    const db = e.target.result;
                    if (!db.objectStoreNames.contains('pendingPhotos')) {
                        db.createObjectStore('pendingPhotos', { keyPath: 'sessionId' });
                    }
                };
            });
        }

        async function storePhotosInIndexedDB(sessionId, photoFiles) {
            const db = await openPhotoDB();

            // Convert files to array buffers for storage
            const photoData = await Promise.all(photoFiles.map(async (file, index) => ({
                index,
                name: file.name,
                type: file.type,
                data: await file.arrayBuffer()
            })));

            return new Promise((resolve, reject) => {
                const transaction = db.transaction(['pendingPhotos'], 'readwrite');
                const store = transaction.objectStore('pendingPhotos');

                const request = store.put({
                    sessionId,
                    photos: photoData,
                    timestamp: Date.now()
                });

                request.onsuccess = () => resolve();
                request.onerror = () => reject(request.error);
            });
        }

        // Check auth on page load
        async function checkAuth() {
            const token = localStorage.getItem('authToken') || sessionStorage.getItem('authToken');
            if (!token) {
                window.location.href = '/photo-studio-auth?redirect=/photo-studio-upload';
                return;
            }

            // Verify token is valid
            try {
                const response = await fetch('/api/photo-studio/orders', {
                    headers: { 'Authorization': `Bearer ${token}` }
                });

                if (response.status === 401) {
                    localStorage.removeItem('authToken');
                    sessionStorage.removeItem('authToken');
                    window.location.href = '/photo-studio-auth?redirect=/photo-studio-upload';
                }
            } catch (error) {
                console.error('Auth check error:', error);
            }
        }

        // Initialize
        checkAuth();
        updateCart();

        // Demo mode UI updates
        if (isDemo) {
            // Add demo banner before the pricing card
            const pricingCard = document.querySelector('.pricing-info-card');
            if (pricingCard) {
                const demoBanner = document.createElement('div');
                demoBanner.style.cssText = 'background: linear-gradient(135deg, #10b981 0%, #059669 100%); color: white; padding: 1rem; border-radius: 0.5rem; margin-bottom: 1rem; text-align: center;';
                demoBanner.innerHTML = `
                    <div style="font-size: 1.25rem; font-weight: 700;">ðŸŽ‰ $1 Demo</div>
                    <div style="font-size: 0.85rem; opacity: 0.9;">1 photo â€¢ Try risk-free!</div>
                `;
                pricingCard.parentNode.insertBefore(demoBanner, pricingCard);
            }

            // Update minimum notice
            const minimumNotice = document.querySelector('.minimum-notice');
            if (minimumNotice) {
                minimumNotice.textContent = 'Demo: 1 photo for just $1';
                minimumNotice.style.color = '#059669';
            }

            // Update cart header
            const cartHeader = document.querySelector('.cart-header h2');
            if (cartHeader) {
                cartHeader.textContent = 'ðŸŽ‰ $1 Demo';
            }
        }
    </script>
