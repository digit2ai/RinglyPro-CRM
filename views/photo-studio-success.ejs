<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmed - RinglyPro Photo Studio</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'Segoe UI', 'Roboto', sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .success-container {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            max-width: 600px;
            width: 100%;
            padding: 3rem 2rem;
            text-align: center;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 2rem;
            font-size: 3rem;
        }

        h1 {
            font-size: 2rem;
            color: #0a0a0a;
            margin-bottom: 1rem;
        }

        .order-id {
            font-size: 0.875rem;
            color: #64748b;
            margin-bottom: 2rem;
        }

        .details-card {
            background: #f8fafc;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: left;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0;
            border-bottom: 1px solid #e2e8f0;
        }

        .detail-row:last-child {
            border-bottom: none;
        }

        .detail-label {
            font-weight: 600;
            color: #0a0a0a;
        }

        .detail-value {
            color: #64748b;
        }

        .next-steps {
            background: #e0e7ff;
            border-left: 4px solid #6366f1;
            padding: 1.5rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
            text-align: left;
        }

        .next-steps h3 {
            color: #0a0a0a;
            margin-bottom: 1rem;
            font-size: 1.125rem;
        }

        .next-steps ol {
            margin-left: 1.5rem;
            color: #1a1a1a;
        }

        .next-steps li {
            margin-bottom: 0.5rem;
        }

        .btn {
            display: inline-block;
            padding: 1rem 2rem;
            font-size: 1.125rem;
            font-weight: 600;
            text-decoration: none;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
            cursor: pointer;
            border: none;
            margin: 0.5rem;
        }

        .btn-primary {
            background-color: #6366f1;
            color: #ffffff;
            box-shadow: 0 4px 6px rgba(99, 102, 241, 0.2);
        }

        .btn-primary:hover {
            background-color: #4f46e5;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(99, 102, 241, 0.3);
        }

        .btn-secondary {
            background-color: transparent;
            color: #6366f1;
            border: 2px solid #6366f1;
        }

        .btn-secondary:hover {
            background-color: #6366f1;
            color: #ffffff;
        }

        .support-text {
            margin-top: 2rem;
            font-size: 0.875rem;
            color: #64748b;
        }

        .loading {
            text-align: center;
            padding: 3rem;
        }

        .spinner {
            border: 3px solid #f3f4f6;
            border-top: 3px solid #6366f1;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 1rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .error {
            background: #fef2f2;
            border-left: 4px solid #ef4444;
            padding: 1.5rem;
            border-radius: 0.5rem;
            color: #991b1b;
            margin-bottom: 2rem;
        }

        .upload-progress {
            background: #f8fafc;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 2rem;
            text-align: left;
        }

        .upload-progress h3 {
            color: #0a0a0a;
            margin-bottom: 1rem;
            font-size: 1.125rem;
        }

        .progress-bar {
            width: 100%;
            height: 20px;
            background: #e2e8f0;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(90deg, #6366f1 0%, #8b5cf6 100%);
            transition: width 0.3s ease;
        }

        .progress-text {
            font-size: 0.875rem;
            color: #64748b;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="success-container">
        <div id="loading" class="loading">
            <div class="spinner"></div>
            <p id="loading-text">Verifying your payment...</p>
        </div>

        <!-- Cart Upload Progress -->
        <div id="upload-section" style="display: none;">
            <div class="success-icon">ðŸ“¤</div>
            <h1>Uploading Your Photos</h1>
            <p style="color: #64748b; margin-bottom: 2rem;">Please wait while we upload your photos...</p>

            <div class="upload-progress">
                <h3>Upload Progress</h3>
                <div class="progress-bar">
                    <div class="progress-fill" id="progress-fill" style="width: 0%"></div>
                </div>
                <p class="progress-text" id="progress-text">Preparing upload...</p>
            </div>
        </div>

        <div id="success" style="display: none;">
            <div class="success-icon">âœ“</div>
            <h1>Payment Successful!</h1>
            <p class="order-id">Order #<span id="orderId"></span></p>

            <div class="details-card">
                <div class="detail-row">
                    <span class="detail-label">Package:</span>
                    <span class="detail-value" id="packageName"></span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Photos to Upload:</span>
                    <span class="detail-value" id="photosToUpload"></span>
                </div>
                <div class="detail-row">
                    <span class="detail-label">Photos You'll Receive:</span>
                    <span class="detail-value" id="photosToReceive"></span>
                </div>
            </div>

            <div class="next-steps">
                <h3>Next Steps:</h3>
                <ol>
                    <li>Check your email for upload instructions</li>
                    <li>Upload your photos through our secure portal</li>
                    <li>We'll enhance them and deliver within 48-72 hours</li>
                </ol>
            </div>

            <div>
                <a href="/photo-studio-portal" class="btn btn-primary">View My Orders</a>
            </div>

            <p class="support-text">Questions? Contact us at support@ringlypro.com</p>
        </div>

        <div id="error" style="display: none;">
            <div class="error">
                <h3>Payment Verification Failed</h3>
                <p id="errorMessage"></p>
                <p style="margin-top: 1rem;">Please contact support at support@ringlypro.com for assistance.</p>
            </div>
        </div>
    </div>

    <script>
        // IndexedDB functions
        function openPhotoDB() {
            return new Promise((resolve, reject) => {
                const request = indexedDB.open('PhotoStudioDB', 1);
                request.onerror = () => reject(request.error);
                request.onsuccess = () => resolve(request.result);
                request.onupgradeneeded = (e) => {
                    const db = e.target.result;
                    if (!db.objectStoreNames.contains('pendingPhotos')) {
                        db.createObjectStore('pendingPhotos', { keyPath: 'sessionId' });
                    }
                };
            });
        }

        async function getPhotosFromIndexedDB(sessionId) {
            const db = await openPhotoDB();
            return new Promise((resolve, reject) => {
                const transaction = db.transaction(['pendingPhotos'], 'readonly');
                const store = transaction.objectStore('pendingPhotos');
                const request = store.get(sessionId);
                request.onsuccess = () => resolve(request.result);
                request.onerror = () => reject(request.error);
            });
        }

        async function deletePhotosFromIndexedDB(sessionId) {
            const db = await openPhotoDB();
            return new Promise((resolve, reject) => {
                const transaction = db.transaction(['pendingPhotos'], 'readwrite');
                const store = transaction.objectStore('pendingPhotos');
                const request = store.delete(sessionId);
                request.onsuccess = () => resolve();
                request.onerror = () => reject(request.error);
            });
        }

        function updateProgress(current, total, status) {
            const percentage = Math.round((current / total) * 100);
            document.getElementById('progress-fill').style.width = percentage + '%';
            document.getElementById('progress-text').textContent = status || `Uploading ${current} of ${total} photos...`;
        }

        async function handleCartUpload(sessionId, token) {
            // Show upload section
            document.getElementById('loading').style.display = 'none';
            document.getElementById('upload-section').style.display = 'block';

            try {
                // Get photos from IndexedDB
                const storedData = await getPhotosFromIndexedDB(sessionId);

                if (!storedData || !storedData.photos || storedData.photos.length === 0) {
                    throw new Error('No photos found. Please try uploading again from the upload page.');
                }

                const photos = storedData.photos;
                updateProgress(0, photos.length, 'Preparing photos...');

                // Convert array buffers back to Files and create FormData
                const formData = new FormData();
                formData.append('session_id', sessionId);

                for (let i = 0; i < photos.length; i++) {
                    const photoData = photos[i];
                    const blob = new Blob([photoData.data], { type: photoData.type });
                    const file = new File([blob], photoData.name, { type: photoData.type });
                    formData.append('photos', file);
                    updateProgress(i + 1, photos.length, `Preparing photo ${i + 1} of ${photos.length}...`);
                }

                updateProgress(0, photos.length, 'Uploading to server...');

                // Upload to backend
                const response = await fetch('/api/photo-studio/complete-cart-upload', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    },
                    body: formData
                });

                const data = await response.json();

                if (!data.success) {
                    throw new Error(data.error || 'Upload failed');
                }

                // Clear IndexedDB
                await deletePhotosFromIndexedDB(sessionId);

                updateProgress(photos.length, photos.length, 'Upload complete!');

                // Show success after a brief delay
                setTimeout(() => {
                    document.getElementById('upload-section').style.display = 'none';
                    document.getElementById('success').style.display = 'block';

                    document.getElementById('orderId').textContent = data.order_id;
                    document.getElementById('packageName').textContent = `Custom (${photos.length} photos)`;
                    document.getElementById('photosToUpload').textContent = photos.length;
                    document.getElementById('photosToReceive').textContent = photos.length;
                }, 1000);

            } catch (error) {
                console.error('Cart upload error:', error);
                document.getElementById('upload-section').style.display = 'none';
                document.getElementById('error').style.display = 'block';
                document.getElementById('errorMessage').textContent = error.message;
            }
        }

        async function verifyPayment() {
            try {
                // Get session ID and cart flag from URL
                const urlParams = new URLSearchParams(window.location.search);
                const sessionId = urlParams.get('session_id');
                const isCart = urlParams.get('cart') === 'true';

                if (!sessionId) {
                    throw new Error('No session ID found');
                }

                // Get auth token
                const token = localStorage.getItem('authToken') || sessionStorage.getItem('authToken');

                if (!token) {
                    window.location.href = '/photo-studio-auth?redirect=/photo-studio-success?session_id=' + sessionId + (isCart ? '&cart=true' : '');
                    return;
                }

                // If this is a cart checkout, handle the upload
                if (isCart) {
                    await handleCartUpload(sessionId, token);
                    return;
                }

                // Otherwise, verify payment normally (for package purchases)
                const response = await fetch(`/api/photo-studio/verify-payment?session_id=${sessionId}`, {
                    method: 'GET',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();

                if (data.success) {
                    // Show success
                    document.getElementById('loading').style.display = 'none';
                    document.getElementById('success').style.display = 'block';

                    // Populate order details
                    document.getElementById('orderId').textContent = data.orderId;
                    document.getElementById('packageName').textContent = data.packageType.charAt(0).toUpperCase() + data.packageType.slice(1);
                    document.getElementById('photosToUpload').textContent = data.photosToUpload;
                    document.getElementById('photosToReceive').textContent = data.photosToReceive;

                } else {
                    throw new Error(data.error || 'Payment verification failed');
                }

            } catch (error) {
                console.error('Verification error:', error);
                document.getElementById('loading').style.display = 'none';
                document.getElementById('upload-section').style.display = 'none';
                document.getElementById('error').style.display = 'block';
                document.getElementById('errorMessage').textContent = error.message;
            }
        }

        // Verify payment on page load
        window.addEventListener('DOMContentLoaded', verifyPayment);
    </script>
</body>
</html>
