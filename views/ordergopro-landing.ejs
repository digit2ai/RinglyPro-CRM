        /* Sound wave animations emanating from logo */
        @keyframes soundWave {
            0% {
                width: 100%;
                height: 100%;
                opacity: 0.5;
                border-width: 2px;
            }
            100% {
                width: 200%;
                height: 200%;
                opacity: 0;
                border-width: 0.5px;
            }
        }

        .logo-container {
            position: relative;
            display: inline-block;
        }

        .sound-wave {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 50%;
            border: 2px solid var(--sky);
            animation: soundWave 3s infinite ease-out;
        }

        .sound-wave:nth-child(1) {
            animation-delay: 0s;
        }

        .sound-wave:nth-child(2) {
            animation-delay: 0.75s;
        }

        .sound-wave:nth-child(3) {
            animation-delay: 1.5s;
        }

        .sound-wave:nth-child(4) {
            animation-delay: 2.25s;
        }

        .gradient-text {
            background: linear-gradient(135deg, var(--sky), var(--orange));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .feature-card {
            transition: all 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(11, 30, 62, 0.15);
        }

        .pricing-card {
            transition: all 0.3s ease;
        }

        .pricing-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 24px rgba(11, 30, 62, 0.15);
        }

        .feature-link {
            color: var(--sky);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s;
            border-bottom: 2px solid transparent;
        }

        .feature-link:hover {
            color: var(--orange);
            border-bottom-color: var(--orange);
        }

        /* How It Works Animations */
        @keyframes slideRight {
            0%, 100% {
                transform: translateX(0);
            }
            50% {
                transform: translateX(8px);
            }
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.05);
                opacity: 0.8;
            }
        }

        .workflow-arrow {
            animation: slideRight 2s ease-in-out infinite;
        }

        .step-number {
            animation: pulse 2s ease-in-out infinite;
        }

        .live-demo-indicator {
