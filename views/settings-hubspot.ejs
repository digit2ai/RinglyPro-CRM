<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HubSpot Integration - RinglyPro</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: #f5f5f7;
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .header h1 {
            font-size: 2rem;
            color: #1d1d1f;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .header p {
            color: #6e6e73;
            font-size: 1rem;
        }

        .card {
            background: white;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            margin-bottom: 1.5rem;
        }

        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #e5e5e7;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1d1d1f;
        }

        .toggle {
            position: relative;
            display: inline-block;
            width: 51px;
            height: 31px;
        }

        .toggle input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 31px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 23px;
            width: 23px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider {
            background-color: #ff7a59;
        }

        input:checked + .slider:before {
            transform: translateX(20px);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #1d1d1f;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .form-input {
            width: 100%;
            padding: 0.875rem 1rem;
            font-size: 1rem;
            border: 1px solid #d2d2d7;
            border-radius: 8px;
            transition: border-color 0.2s;
        }

        .form-input:focus {
            outline: none;
            border-color: #ff7a59;
        }

        .form-hint {
            color: #6e6e73;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .status-connected {
            background: #d1fae5;
            color: #065f46;
        }

        .status-disconnected {
            background: #fee2e2;
            color: #991b1b;
        }

        .btn {
            display: inline-block;
            padding: 0.875rem 1.5rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-primary {
            background: #ff7a59;
            color: white;
        }

        .btn-primary:hover {
            background: #e6694d;
        }

        .btn-secondary {
            background: #f5f5f7;
            color: #1d1d1f;
        }

        .btn-secondary:hover {
            background: #e8e8ed;
        }

        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .alert-success {
            background: #d1fae5;
            color: #065f46;
            border: 1px solid #6ee7b7;
        }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            border: 1px solid #fca5a5;
        }

        .alert-info {
            background: #fff5f0;
            color: #c4320a;
            border: 1px solid #fed7aa;
        }

        .feature-list {
            list-style: none;
            padding: 0;
        }

        .feature-list li {
            padding: 0.75rem 0;
            border-bottom: 1px solid #f5f5f7;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .feature-list li:last-child {
            border-bottom: none;
        }

        .setup-steps {
            background: #fff5f0;
            padding: 1.5rem;
            border-radius: 8px;
            margin-top: 1.5rem;
        }

        .setup-steps ol {
            padding-left: 1.5rem;
        }

        .setup-steps li {
            margin-bottom: 0.75rem;
            color: #1d1d1f;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: #ff7a59;
            text-decoration: none;
            margin-bottom: 1.5rem;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        #alert-container .alert {
            display: block;
        }

        .hubspot-logo {
            color: #ff7a59;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/" class="back-link">
            ‚Üê Back to Dashboard
        </a>

        <div class="header">
            <h1><span class="hubspot-logo">üß°</span> HubSpot Integration</h1>
            <p>Connect your HubSpot CRM to sync contacts and book appointments via WhatsApp</p>
        </div>

        <div id="alert-container"></div>

        <!-- Status Card -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Integration Status</div>
                <div id="status-badge" class="status-badge status-disconnected">
                    <span>‚óè</span>
                    <span>Not configured</span>
                </div>
            </div>

            <ul class="feature-list">
                <li>
                    <span>üìÖ</span>
                    <span>Meeting scheduling - Book appointments directly via WhatsApp</span>
                </li>
                <li>
                    <span>üë•</span>
                    <span>Contact sync - Auto-create contacts from WhatsApp leads</span>
                </li>
                <li>
                    <span>üìä</span>
                    <span>Dashboard sync - View HubSpot appointments in RinglyPro</span>
                </li>
                <li>
                    <span>üîî</span>
                    <span>Confirmation - Automatic booking confirmations via WhatsApp</span>
                </li>
            </ul>
        </div>

        <!-- Configuration Card -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">API Configuration</div>
                <label class="toggle">
                    <input type="checkbox" id="enableToggle" onchange="handleToggleChange()">
                    <span class="slider"></span>
                </label>
            </div>

            <form id="hubspotForm" onsubmit="handleSaveSettings(event)">
                <div class="form-group">
                    <label class="form-label" for="apiKey">HubSpot Private App Access Token</label>
                    <input type="password"
                           id="apiKey"
                           class="form-input"
                           placeholder="pat-na1-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
                           autocomplete="off">
                    <p class="form-hint">Your HubSpot Private App Access Token (starts with "pat-")</p>
                </div>

                <div class="form-group">
                    <label class="form-label" for="meetingSlug">Default Meeting Link (Optional)</label>
                    <input type="text"
                           id="meetingSlug"
                           class="form-input"
                           placeholder="https://meetings.hubspot.com/your-slug or just your-slug"
                           autocomplete="off">
                    <p class="form-hint">Paste your full HubSpot meeting URL or just the slug (e.g., <strong>ringlypro</strong>)</p>
                </div>

                <div class="form-group">
                    <label class="form-label" for="timezone">Timezone</label>
                    <select id="timezone" class="form-input">
                        <option value="America/New_York">Eastern Time (ET)</option>
                        <option value="America/Chicago">Central Time (CT)</option>
                        <option value="America/Denver">Mountain Time (MT)</option>
                        <option value="America/Los_Angeles">Pacific Time (PT)</option>
                        <option value="America/Phoenix">Arizona (MST)</option>
                        <option value="America/Anchorage">Alaska Time</option>
                        <option value="Pacific/Honolulu">Hawaii Time</option>
                        <option value="UTC">UTC</option>
                    </select>
                    <p class="form-hint">Timezone for appointment scheduling</p>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
                    <button type="submit" class="btn btn-primary">Save Settings</button>
                    <button type="button" class="btn btn-secondary" onclick="testConnection()">Test Connection</button>
                </div>
            </form>

            <div class="setup-steps">
                <strong>How to get your HubSpot Access Token:</strong>
                <ol>
                    <li>Go to <a href="https://app.hubspot.com/settings" target="_blank" style="color: #ff7a59;">HubSpot Settings</a> ‚Üí Integrations ‚Üí Private Apps</li>
                    <li>Click <strong>"Create a private app"</strong></li>
                    <li>Name it "RinglyPro Integration"</li>
                    <li>Under <strong>Scopes</strong>, add these permissions:
                        <ul style="margin-top: 0.5rem; margin-left: 1rem;">
                            <li><code>crm.objects.contacts.read</code></li>
                            <li><code>crm.objects.contacts.write</code></li>
                            <li><code>sales-email-read</code></li>
                            <li><code>scheduler.read.meetings</code> (for meetings)</li>
                        </ul>
                    </li>
                    <li>Click <strong>"Create app"</strong> and copy the Access Token</li>
                </ol>
            </div>
        </div>

        <!-- Booking Options Card -->
        <div class="card">
            <div class="card-header">
                <div class="card-title">Booking Options</div>
            </div>

            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 0.75rem; cursor: pointer;">
                    <input type="checkbox" id="syncContacts" checked style="width: 18px; height: 18px;">
                    <span><strong>Sync Contacts</strong> - Create contacts in HubSpot from WhatsApp leads</span>
                </label>
            </div>

            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 0.75rem; cursor: pointer;">
                    <input type="checkbox" id="syncCalendar" checked style="width: 18px; height: 18px;">
                    <span><strong>Book Appointments</strong> - Schedule meetings via HubSpot from WhatsApp</span>
                </label>
            </div>

            <div class="form-group">
                <label style="display: flex; align-items: center; gap: 0.75rem; cursor: pointer;">
                    <input type="checkbox" id="saveLocal" checked style="width: 18px; height: 18px;">
                    <span><strong>Save to Dashboard</strong> - Also save appointments to RinglyPro dashboard</span>
                </label>
            </div>

            <button type="button" class="btn btn-primary" onclick="saveBookingOptions()">Save Booking Options</button>
        </div>
    </div>

    <script>
        // Get auth token (stored as 'token' from login)
        const token = localStorage.getItem('token');
        if (!token) {
            window.location.href = '/login';
        }

        let currentSettings = {};

        async function loadSettings() {
            try {
                const response = await fetch('/api/client-settings/hubspot', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();
                if (data.success && data.hubspot) {
                    currentSettings = data.hubspot;

                    document.getElementById('enableToggle').checked = data.hubspot.enabled || false;
                    document.getElementById('apiKey').value = data.hubspot.apiKey ? '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢' : '';
                    document.getElementById('meetingSlug').value = data.hubspot.meetingSlug || '';
                    document.getElementById('timezone').value = data.hubspot.timezone || 'America/New_York';

                    document.getElementById('syncContacts').checked = data.hubspot.syncContacts !== false;
                    document.getElementById('syncCalendar').checked = data.hubspot.syncCalendar !== false;
                    document.getElementById('saveLocal').checked = data.hubspot.saveLocal !== false;

                    updateStatus(data.hubspot);
                    handleToggleChange();
                }
            } catch (error) {
                console.error('Failed to load settings:', error);
                showAlert('Failed to load settings', 'error');
            }
        }

        function handleToggleChange() {
            const enabled = document.getElementById('enableToggle').checked;
            const inputs = document.querySelectorAll('#hubspotForm .form-input');
            inputs.forEach(input => {
                input.disabled = !enabled;
            });
        }

        // Extract meeting slug from URL or return as-is if already a slug
        function extractMeetingSlug(input) {
            if (!input) return null;
            input = input.trim();

            // If it's a full URL, extract the slug
            // Handles: https://meetings.hubspot.com/john-smith
            //          https://meetings-na2.hubspot.com/ringlypro
            //          meetings.hubspot.com/john-smith
            const urlPattern = /(?:https?:\/\/)?meetings(?:-[a-z0-9]+)?\.hubspot\.com\/([^\/\?\s]+)/i;
            const match = input.match(urlPattern);
            if (match) {
                return match[1];
            }

            // Otherwise, assume it's already just the slug
            return input;
        }

        async function handleSaveSettings(event) {
            event.preventDefault();

            const apiKeyValue = document.getElementById('apiKey').value;
            const meetingSlugInput = document.getElementById('meetingSlug').value;

            // Only send apiKey if it's a new value (not masked bullets)
            // If masked, don't send apiKey at all - backend will preserve existing key
            const settings = {
                enabled: document.getElementById('enableToggle').checked,
                meetingSlug: extractMeetingSlug(meetingSlugInput),
                timezone: document.getElementById('timezone').value,
                syncContacts: document.getElementById('syncContacts').checked,
                syncCalendar: document.getElementById('syncCalendar').checked,
                saveLocal: document.getElementById('saveLocal').checked
            };

            // Only include apiKey if user entered a new value (not masked)
            if (apiKeyValue && !apiKeyValue.includes('‚Ä¢‚Ä¢‚Ä¢‚Ä¢')) {
                settings.apiKey = apiKeyValue;
            }

            try {
                const response = await fetch('/api/client-settings/hubspot', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(settings)
                });

                const data = await response.json();

                if (data.success) {
                    currentSettings = { ...currentSettings, ...settings };
                    showAlert('HubSpot settings saved successfully!', 'success');
                    updateStatus(settings);
                } else {
                    showAlert(data.error || 'Failed to save settings', 'error');
                }
            } catch (error) {
                console.error('Save error:', error);
                showAlert('Failed to save settings', 'error');
            }
        }

        async function saveBookingOptions() {
            // Don't spread currentSettings as it contains apiKey as boolean
            // Instead, only send the specific fields we want to update
            const settings = {
                enabled: document.getElementById('enableToggle').checked,
                meetingSlug: currentSettings.meetingSlug || null,
                timezone: currentSettings.timezone || 'America/New_York',
                syncContacts: document.getElementById('syncContacts').checked,
                syncCalendar: document.getElementById('syncCalendar').checked,
                saveLocal: document.getElementById('saveLocal').checked
            };
            // Don't include apiKey - backend will preserve existing key

            try {
                const response = await fetch('/api/client-settings/hubspot', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(settings)
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('Booking options saved!', 'success');
                } else {
                    showAlert(data.error || 'Failed to save', 'error');
                }
            } catch (error) {
                showAlert('Failed to save booking options', 'error');
            }
        }

        async function testConnection() {
            showAlert('Testing connection...', 'info');

            try {
                const response = await fetch('/api/client-settings/hubspot/test', {
                    method: 'POST',
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('Connection successful! HubSpot is connected.', 'success');
                } else {
                    showAlert(data.error || 'Connection failed. Please check your credentials.', 'error');
                }
            } catch (error) {
                showAlert('Connection test failed', 'error');
            }
        }

        function updateStatus(settings) {
            const badge = document.getElementById('status-badge');
            // Check if enabled AND has API key (apiKey or apiKeySet indicates key exists)
            const hasApiKey = settings.apiKey || settings.apiKeySet;
            const isEnabled = settings.enabled;

            if (isEnabled && hasApiKey) {
                badge.className = 'status-badge status-connected';
                badge.innerHTML = '<span>‚óè</span><span>Connected</span>';
            } else if (hasApiKey && !isEnabled) {
                badge.className = 'status-badge status-disconnected';
                badge.innerHTML = '<span>‚óè</span><span>Disabled</span>';
            } else {
                badge.className = 'status-badge status-disconnected';
                badge.innerHTML = '<span>‚óè</span><span>Not configured</span>';
            }
        }

        function showAlert(message, type) {
            const container = document.getElementById('alert-container');
            container.innerHTML = `<div class="alert alert-${type}">${message}</div>`;
            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }

        loadSettings();
    </script>
</body>
</html>
