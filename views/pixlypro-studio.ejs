<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PixlyPro Photo Studio - AI Photo Enhancement</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 3rem;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .header p {
            font-size: 1.125rem;
            opacity: 0.9;
        }

        .studio-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }

        .upload-section {
            padding: 3rem;
            text-align: center;
            border-bottom: 2px solid #f0f0f0;
        }

        .upload-zone {
            border: 3px dashed #3b82f6;
            border-radius: 1rem;
            padding: 3rem;
            background: #f8fafc;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .upload-zone:hover {
            background: #eff6ff;
            border-color: #2563eb;
        }

        .upload-zone.dragover {
            background: #dbeafe;
            border-color: #1d4ed8;
        }

        .upload-zone.processing {
            pointer-events: none;
            opacity: 0.7;
        }

        .upload-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .upload-text {
            font-size: 1.25rem;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .upload-hint {
            color: #64748b;
            font-size: 0.875rem;
        }

        .file-input {
            display: none;
        }

        .btn {
            display: inline-block;
            padding: 0.875rem 2rem;
            background: #3b82f6;
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 1rem;
        }

        .btn:hover {
            background: #2563eb;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        }

        .btn:disabled {
            background: #94a3b8;
            cursor: not-allowed;
            transform: none;
        }

        .btn-success {
            background: #10b981;
        }

        .btn-success:hover {
            background: #059669;
        }

        /* Progress Section */
        .progress-section {
            display: none;
            padding: 2rem 3rem;
            background: #f8fafc;
            border-bottom: 2px solid #f0f0f0;
        }

        .progress-section.active {
            display: block;
        }

        .progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .progress-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1e293b;
        }

        .progress-count {
            color: #64748b;
            font-size: 0.875rem;
        }

        .progress-bar-container {
            background: #e2e8f0;
            border-radius: 0.5rem;
            height: 12px;
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .progress-bar {
            background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
            height: 100%;
            width: 0%;
            transition: width 0.3s ease;
            border-radius: 0.5rem;
        }

        .progress-status {
            color: #64748b;
            font-size: 0.875rem;
            text-align: center;
        }

        .gallery {
            padding: 2rem 3rem 3rem;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }

        .photo-card {
            background: #f8fafc;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            position: relative;
        }

        .photo-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.15);
        }

        .photo-preview {
            width: 100%;
            height: 250px;
            object-fit: cover;
            background: #e2e8f0;
        }

        .photo-info {
            padding: 1rem;
        }

        .photo-name {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .photo-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .status-processing {
            background: #fef3c7;
            color: #92400e;
        }

        .status-enhanced {
            background: #d1fae5;
            color: #065f46;
        }

        .status-error {
            background: #fee2e2;
            color: #991b1b;
        }

        .download-btn {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            background: #10b981;
            color: white;
            border: none;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            cursor: pointer;
            font-size: 0.75rem;
            font-weight: 600;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .photo-card:hover .download-btn {
            opacity: 1;
        }

        .download-btn:hover {
            background: #059669;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .info-banner {
            background: #dbeafe;
            border: 1px solid #3b82f6;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-top: 1.5rem;
            text-align: left;
        }

        .info-banner p {
            color: #1e40af;
            font-size: 0.875rem;
            margin: 0;
        }

        .info-banner strong {
            display: block;
            margin-bottom: 0.25rem;
        }

        @media (max-width: 768px) {
            .gallery {
                grid-template-columns: 1fr;
            }

            .header h1 {
                font-size: 1.75rem;
            }

            .upload-section {
                padding: 2rem 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>PixlyPro Photo Studio</h1>
            <p>Upload your photos and watch AI enhance them to professional quality</p>
        </div>

        <div class="studio-card">
            <!-- Upload Section -->
            <div class="upload-section">
                <div class="upload-zone" id="uploadZone">
                    <div class="upload-icon">ðŸ“¸</div>
                    <div class="upload-text">Drag & Drop Photos Here</div>
                    <div class="upload-hint">or click to browse (supports JPG, PNG, HEIC, WebP)</div>
                    <input type="file" id="fileInput" class="file-input" accept="image/*" multiple>
                    <button class="btn" id="selectBtn" onclick="document.getElementById('fileInput').click()">
                        Choose Photos
                    </button>
                </div>

                <div class="info-banner">
                    <p>
                        <strong>AI-Powered Enhancement</strong>
                        Your photos will be automatically enhanced to professional commercial quality while preserving their original look and composition.
                    </p>
                </div>
            </div>

            <!-- Progress Section -->
            <div class="progress-section" id="progressSection">
                <div class="progress-header">
                    <span class="progress-title">Enhancing Photos</span>
                    <span class="progress-count" id="progressCount">0 / 0</span>
                </div>
                <div class="progress-bar-container">
                    <div class="progress-bar" id="progressBar"></div>
                </div>
                <div class="progress-status" id="progressStatus">Preparing...</div>
            </div>

            <!-- Gallery Section -->
            <div class="gallery" id="gallery">
                <div class="empty-state">
                    <div class="empty-icon">ðŸŽ¨</div>
                    <h3>No photos yet</h3>
                    <p>Upload your photos to see AI magic happen!</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // =====================================================
        // PixlyPro Photo Studio - Direct AI Enhancement
        // No payment required - photos are enhanced immediately
        // =====================================================

        const uploadZone = document.getElementById('uploadZone');
        const fileInput = document.getElementById('fileInput');
        const gallery = document.getElementById('gallery');
        const progressSection = document.getElementById('progressSection');
        const progressBar = document.getElementById('progressBar');
        const progressCount = document.getElementById('progressCount');
        const progressStatus = document.getElementById('progressStatus');
        const selectBtn = document.getElementById('selectBtn');

        let enhancedPhotos = [];
        let isProcessing = false;

        // Get auth token
        function getToken() {
            return localStorage.getItem('pixlypro_token') || localStorage.getItem('token');
        }

        // Upload Zone Event Listeners
        uploadZone.addEventListener('click', (e) => {
            if (e.target.tagName !== 'BUTTON' && !isProcessing) {
                fileInput.click();
            }
        });

        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            if (!isProcessing) {
                uploadZone.classList.add('dragover');
            }
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
            if (!isProcessing) {
                const files = Array.from(e.dataTransfer.files).filter(f => f.type.startsWith('image/'));
                if (files.length > 0) {
                    processFiles(files);
                }
            }
        });

        fileInput.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            if (files.length > 0) {
                processFiles(files);
            }
            fileInput.value = ''; // Reset for re-selection
        });

        async function processFiles(files) {
            const token = getToken();
            if (!token) {
                alert('Please log in first');
                window.location.href = '/pixlypro-auth';
                return;
            }

            if (isProcessing) return;
            isProcessing = true;

            // Update UI
            uploadZone.classList.add('processing');
            selectBtn.disabled = true;
            selectBtn.textContent = 'Processing...';
            progressSection.classList.add('active');

            // Clear empty state if this is the first upload
            if (enhancedPhotos.length === 0) {
                gallery.innerHTML = '';
            }

            const totalFiles = files.length;
            let processedCount = 0;

            progressCount.textContent = `0 / ${totalFiles}`;
            progressBar.style.width = '0%';

            for (const file of files) {
                try {
                    progressStatus.textContent = `Enhancing: ${file.name}...`;

                    // Create preview card first
                    const cardId = `card_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
                    const previewUrl = URL.createObjectURL(file);
                    addPhotoCard(cardId, file.name, previewUrl, 'processing');

                    // Create FormData and upload
                    const formData = new FormData();
                    formData.append('photos', file);

                    const response = await fetch('/api/pixlypro/upload-and-enhance-direct', {
                        method: 'POST',
                        headers: {
                            'Authorization': `Bearer ${token}`
                        },
                        body: formData
                    });

                    const data = await response.json();

                    if (data.success && data.photos && data.photos.length > 0) {
                        const photo = data.photos[0];
                        // Update card with enhanced result
                        updatePhotoCard(cardId, photo.enhancedUrl, 'enhanced');
                        enhancedPhotos.push({
                            id: cardId,
                            name: file.name,
                            originalUrl: photo.originalUrl,
                            enhancedUrl: photo.enhancedUrl
                        });
                    } else {
                        updatePhotoCard(cardId, previewUrl, 'error');
                        console.error('Enhancement failed:', data.error);
                    }

                } catch (error) {
                    console.error('Error processing file:', error);
                }

                processedCount++;
                const progress = (processedCount / totalFiles) * 100;
                progressBar.style.width = `${progress}%`;
                progressCount.textContent = `${processedCount} / ${totalFiles}`;
            }

            // Complete
            progressStatus.textContent = `Complete! ${processedCount} photo${processedCount > 1 ? 's' : ''} enhanced.`;

            setTimeout(() => {
                progressSection.classList.remove('active');
                uploadZone.classList.remove('processing');
                selectBtn.disabled = false;
                selectBtn.textContent = 'Choose More Photos';
                isProcessing = false;
            }, 2000);
        }

        function addPhotoCard(cardId, name, imageUrl, status) {
            const card = document.createElement('div');
            card.className = 'photo-card';
            card.id = cardId;

            card.innerHTML = `
                <img src="${imageUrl}" alt="${name}" class="photo-preview">
                <div class="photo-info">
                    <div class="photo-name">${name}</div>
                    <div class="photo-status">
                        <span class="status-badge status-${status}">${getStatusText(status)}</span>
                    </div>
                </div>
            `;

            gallery.appendChild(card);
        }

        function updatePhotoCard(cardId, imageUrl, status) {
            const card = document.getElementById(cardId);
            if (!card) return;

            const img = card.querySelector('.photo-preview');
            const badge = card.querySelector('.status-badge');

            if (img && status === 'enhanced') {
                img.src = imageUrl;
            }

            if (badge) {
                badge.className = `status-badge status-${status}`;
                badge.textContent = getStatusText(status);
            }

            // Add download button for enhanced photos
            if (status === 'enhanced') {
                const existingBtn = card.querySelector('.download-btn');
                if (!existingBtn) {
                    const downloadBtn = document.createElement('button');
                    downloadBtn.className = 'download-btn';
                    downloadBtn.textContent = 'Download';
                    downloadBtn.onclick = () => downloadImage(imageUrl, cardId);
                    card.appendChild(downloadBtn);
                }
            }
        }

        function getStatusText(status) {
            switch (status) {
                case 'processing': return 'Enhancing...';
                case 'enhanced': return 'Enhanced';
                case 'error': return 'Error';
                default: return status;
            }
        }

        async function downloadImage(url, cardId) {
            try {
                const photo = enhancedPhotos.find(p => p.id === cardId);
                const filename = photo ? `enhanced_${photo.name}` : 'enhanced_photo.png';

                const response = await fetch(url);
                const blob = await response.blob();
                const downloadUrl = URL.createObjectURL(blob);

                const link = document.createElement('a');
                link.href = downloadUrl;
                link.download = filename;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);

                URL.revokeObjectURL(downloadUrl);
            } catch (error) {
                console.error('Download error:', error);
                alert('Failed to download image');
            }
        }

        // Check authentication on load
        document.addEventListener('DOMContentLoaded', () => {
            const token = getToken();
            if (!token) {
                window.location.href = '/pixlypro-auth';
            }
        });
    </script>
</body>
</html>
