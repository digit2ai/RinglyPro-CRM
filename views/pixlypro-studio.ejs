<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PixlyPro Photo Studio - Instant Photo Enhancement</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            min-height: 100vh;
            padding: 2rem;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 3rem;
        }

        .header h1 {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .header p {
            font-size: 1.125rem;
            opacity: 0.9;
        }

        .studio-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            overflow: hidden;
        }

        .upload-section {
            padding: 3rem;
            text-align: center;
            border-bottom: 2px solid #f0f0f0;
        }

        .upload-zone {
            border: 3px dashed #3b82f6;
            border-radius: 1rem;
            padding: 3rem;
            background: #f8fafc;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .upload-zone:hover {
            background: #eff6ff;
            border-color: #2563eb;
        }

        .upload-zone.dragover {
            background: #dbeafe;
            border-color: #1d4ed8;
        }

        .upload-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }

        .upload-text {
            font-size: 1.25rem;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }

        .upload-hint {
            color: #64748b;
            font-size: 0.875rem;
        }

        .file-input {
            display: none;
        }

        .btn {
            display: inline-block;
            padding: 0.875rem 2rem;
            background: #3b82f6;
            color: white;
            border: none;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 1rem;
        }

        .btn:hover {
            background: #2563eb;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        }

        .btn:disabled {
            background: #94a3b8;
            cursor: not-allowed;
            transform: none;
        }

        .gallery {
            padding: 2rem 3rem 3rem;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 2rem;
        }

        .photo-card {
            background: #f8fafc;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            position: relative;
        }

        .photo-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0,0,0,0.15);
        }

        .photo-preview {
            width: 100%;
            height: 250px;
            object-fit: cover;
            background: #e2e8f0;
        }

        .photo-info {
            padding: 1rem;
        }

        .photo-name {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .photo-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.875rem;
        }

        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 1rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .status-ready {
            background: #d1fae5;
            color: #065f46;
        }

        .status-cached {
            background: #dbeafe;
            color: #1e40af;
        }

        .remove-btn {
            position: absolute;
            top: 0.5rem;
            right: 0.5rem;
            background: #ef4444;
            color: white;
            border: none;
            border-radius: 50%;
            width: 28px;
            height: 28px;
            cursor: pointer;
            font-size: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            transition: opacity 0.2s;
        }

        .photo-card:hover .remove-btn {
            opacity: 1;
        }

        .remove-btn:hover {
            background: #dc2626;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #64748b;
        }

        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .warning-banner {
            background: #fef3c7;
            border: 1px solid #f59e0b;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-top: 1rem;
            text-align: left;
        }

        .warning-banner p {
            color: #92400e;
            font-size: 0.875rem;
            margin: 0;
        }

        @media (max-width: 768px) {
            .gallery {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>PixlyPro Photo Studio</h1>
            <p>Upload your photos and watch AI enhance them instantly</p>
        </div>

        <div class="studio-card">
            <!-- Upload Section -->
            <div class="upload-section">
                <div class="upload-zone" id="uploadZone">
                    <div class="upload-icon">ðŸ“¸</div>
                    <div class="upload-text">Drag & Drop Photos Here</div>
                    <div class="upload-hint">or click to browse (supports JPG, PNG, HEIC)</div>
                    <input type="file" id="fileInput" class="file-input" accept="image/*" multiple>
                    <button class="btn" onclick="document.getElementById('fileInput').click()">
                        Choose Photos
                    </button>
                </div>

                <!-- Pricing Summary & Checkout -->
                <div id="pricingSummary" style="display: none; margin-top: 2rem; padding: 2rem; background: #f8fafc; border-radius: 0.75rem; text-align: left;">
                    <h3 style="color: #1e293b; margin-bottom: 1rem;">Order Summary</h3>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <span style="color: #64748b;">Photos to enhance:</span>
                        <strong id="photoCount" style="color: #1e293b;">0</strong>
                    </div>
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <span style="color: #64748b;">Price per photo:</span>
                        <strong style="color: #1e293b;">$0.50</strong>
                    </div>
                    <div style="border-top: 2px solid #e2e8f0; margin: 1rem 0; padding-top: 1rem; display: flex; justify-content: space-between;">
                        <span style="color: #1e293b; font-size: 1.25rem; font-weight: 600;">Total:</span>
                        <strong id="totalPrice" style="color: #3b82f6; font-size: 1.5rem;">$0.00</strong>
                    </div>
                    <button class="btn" id="processCheckoutBtn" onclick="processCheckout()" style="width: 100%; margin-top: 1rem; padding: 1.25rem; font-size: 1.125rem;">
                        Proceed to Payment ðŸ’³
                    </button>
                    <div class="warning-banner">
                        <p><strong>Note:</strong> Your photos are stored locally in your browser. They will be uploaded and enhanced after payment is confirmed. Please don't close this tab until processing is complete.</p>
                    </div>
                </div>
            </div>

            <!-- Gallery Section -->
            <div class="gallery" id="gallery">
                <div class="empty-state">
                    <div class="empty-icon">ðŸŽ¨</div>
                    <h3>No photos yet</h3>
                    <p>Upload your first photo to see AI magic happen!</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        // =====================================================
        // IndexedDB for storing photos locally until payment
        // =====================================================
        const DB_NAME = 'PixlyProPhotos';
        const DB_VERSION = 1;
        const STORE_NAME = 'photos';
        let db = null;

        // Initialize IndexedDB
        async function initDB() {
            return new Promise((resolve, reject) => {
                const request = indexedDB.open(DB_NAME, DB_VERSION);

                request.onerror = () => reject(request.error);
                request.onsuccess = () => {
                    db = request.result;
                    resolve(db);
                };

                request.onupgradeneeded = (event) => {
                    const database = event.target.result;
                    if (!database.objectStoreNames.contains(STORE_NAME)) {
                        database.createObjectStore(STORE_NAME, { keyPath: 'id' });
                    }
                };
            });
        }

        // Save photo to IndexedDB
        async function savePhotoToDB(photo) {
            return new Promise((resolve, reject) => {
                const transaction = db.transaction([STORE_NAME], 'readwrite');
                const store = transaction.objectStore(STORE_NAME);

                // Convert blob URL to actual blob for storage
                fetch(photo.previewUrl)
                    .then(response => response.blob())
                    .then(blob => {
                        const photoData = {
                            id: photo.id,
                            name: photo.name,
                            type: photo.type,
                            size: photo.size,
                            blob: blob,
                            createdAt: Date.now()
                        };

                        const request = store.put(photoData);
                        request.onsuccess = () => resolve(photoData);
                        request.onerror = () => reject(request.error);
                    })
                    .catch(reject);
            });
        }

        // Get all photos from IndexedDB
        async function getPhotosFromDB() {
            return new Promise((resolve, reject) => {
                const transaction = db.transaction([STORE_NAME], 'readonly');
                const store = transaction.objectStore(STORE_NAME);
                const request = store.getAll();

                request.onsuccess = () => resolve(request.result);
                request.onerror = () => reject(request.error);
            });
        }

        // Delete photo from IndexedDB
        async function deletePhotoFromDB(id) {
            return new Promise((resolve, reject) => {
                const transaction = db.transaction([STORE_NAME], 'readwrite');
                const store = transaction.objectStore(STORE_NAME);
                const request = store.delete(id);

                request.onsuccess = () => resolve();
                request.onerror = () => reject(request.error);
            });
        }

        // Clear all photos from IndexedDB
        async function clearPhotosFromDB() {
            return new Promise((resolve, reject) => {
                const transaction = db.transaction([STORE_NAME], 'readwrite');
                const store = transaction.objectStore(STORE_NAME);
                const request = store.clear();

                request.onsuccess = () => resolve();
                request.onerror = () => reject(request.error);
            });
        }

        // =====================================================
        // Main App Logic
        // =====================================================
        let photos = []; // In-memory photo list with preview URLs

        const uploadZone = document.getElementById('uploadZone');
        const fileInput = document.getElementById('fileInput');
        const gallery = document.getElementById('gallery');

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', async () => {
            await initDB();
            await loadExistingPhotos();
        });

        // Load any existing photos from IndexedDB (in case of page refresh)
        async function loadExistingPhotos() {
            try {
                const storedPhotos = await getPhotosFromDB();
                if (storedPhotos.length > 0) {
                    gallery.innerHTML = '';
                    for (const storedPhoto of storedPhotos) {
                        const previewUrl = URL.createObjectURL(storedPhoto.blob);
                        const photo = {
                            id: storedPhoto.id,
                            name: storedPhoto.name,
                            type: storedPhoto.type,
                            size: storedPhoto.size,
                            previewUrl: previewUrl,
                            status: 'cached'
                        };
                        photos.push(photo);
                        renderPhoto(photo);
                    }
                    updatePricingSummary();
                }
            } catch (error) {
                console.error('Error loading photos from IndexedDB:', error);
            }
        }

        // Upload Zone Event Listeners
        uploadZone.addEventListener('click', (e) => {
            if (e.target.tagName !== 'BUTTON') {
                fileInput.click();
            }
        });

        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
            const files = Array.from(e.dataTransfer.files);
            handleFiles(files);
        });

        fileInput.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            handleFiles(files);
            fileInput.value = ''; // Reset for re-selection
        });

        async function handleFiles(files) {
            if (files.length === 0) return;

            // Clear empty state if this is the first photo
            if (photos.length === 0) {
                gallery.innerHTML = '';
            }

            for (const file of files) {
                if (!file.type.startsWith('image/')) continue;

                const photoId = `photo_${Date.now()}_${Math.random().toString(36).substr(2, 9)}`;
                const previewUrl = URL.createObjectURL(file);

                const photo = {
                    id: photoId,
                    name: file.name,
                    type: file.type,
                    size: file.size,
                    previewUrl: previewUrl,
                    status: 'ready'
                };

                // Save to IndexedDB
                try {
                    await savePhotoToDB(photo);
                    photo.status = 'cached';
                } catch (error) {
                    console.error('Error saving photo to IndexedDB:', error);
                }

                photos.push(photo);
                renderPhoto(photo);
            }

            updatePricingSummary();
        }

        function updatePricingSummary() {
            const photoCount = photos.length;
            const totalPrice = (photoCount * 0.50).toFixed(2);

            document.getElementById('photoCount').textContent = photoCount;
            document.getElementById('totalPrice').textContent = `$${totalPrice}`;

            if (photoCount > 0) {
                document.getElementById('pricingSummary').style.display = 'block';
            } else {
                document.getElementById('pricingSummary').style.display = 'none';
                // Show empty state
                gallery.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">ðŸŽ¨</div>
                        <h3>No photos yet</h3>
                        <p>Upload your first photo to see AI magic happen!</p>
                    </div>
                `;
            }
        }

        async function removePhoto(photoId) {
            // Remove from IndexedDB
            try {
                await deletePhotoFromDB(photoId);
            } catch (error) {
                console.error('Error removing photo from IndexedDB:', error);
            }

            // Remove from memory
            const index = photos.findIndex(p => p.id === photoId);
            if (index > -1) {
                URL.revokeObjectURL(photos[index].previewUrl);
                photos.splice(index, 1);
            }

            // Remove from DOM
            const card = document.getElementById(`card-${photoId}`);
            if (card) card.remove();

            updatePricingSummary();
        }

        async function processCheckout() {
            if (photos.length === 0) {
                alert('Please upload at least one photo');
                return;
            }

            const photoCount = photos.length;
            const totalAmount = photoCount * 0.50;

            try {
                // Get JWT token from localStorage
                const token = localStorage.getItem('pixlypro_token');
                if (!token) {
                    alert('Please log in first');
                    window.location.href = '/pixlypro-auth';
                    return;
                }

                // Disable checkout button
                const btn = document.getElementById('processCheckoutBtn');
                btn.disabled = true;
                btn.textContent = 'Creating checkout session...';

                // Create checkout session WITHOUT uploading photos first
                // Photos stay in IndexedDB until payment is confirmed
                const response = await fetch('/api/pixlypro/create-checkout-session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({
                        packageType: 'custom',
                        photoCount: photoCount,
                        totalAmount: totalAmount
                        // NO tempPhotoIds - photos stay in browser until payment confirmed
                    })
                });

                const data = await response.json();

                if (data.success && data.sessionUrl) {
                    // Store order ID for after payment
                    sessionStorage.setItem('pixlypro_order_id', data.orderId);

                    // Redirect to Stripe checkout
                    window.location.href = data.sessionUrl;
                } else {
                    throw new Error(data.error || 'Failed to create checkout session');
                }

            } catch (error) {
                console.error('Checkout error:', error);
                alert('Failed to create checkout session. Please try again.');

                // Re-enable button
                const btn = document.getElementById('processCheckoutBtn');
                btn.disabled = false;
                btn.textContent = 'Proceed to Payment ðŸ’³';
            }
        }

        function renderPhoto(photo) {
            const card = document.createElement('div');
            card.className = 'photo-card';
            card.id = `card-${photo.id}`;

            card.innerHTML = `
                <button class="remove-btn" onclick="removePhoto('${photo.id}')" title="Remove photo">Ã—</button>
                <img src="${photo.previewUrl}" alt="${photo.name}" class="photo-preview">
                <div class="photo-info">
                    <div class="photo-name">${photo.name}</div>
                    <div class="photo-status">
                        <span class="status-badge status-${photo.status}">${photo.status === 'cached' ? 'Saved locally' : 'Ready'}</span>
                    </div>
                </div>
            `;

            gallery.appendChild(card);
        }
    </script>
</body>
</html>
