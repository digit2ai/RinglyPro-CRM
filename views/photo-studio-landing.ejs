    <script>
        /**
         * Purchase package - Creates Stripe checkout session
         * @param {string} packageType - 'demo', 'starter', 'pro', or 'elite'
         */
        async function purchasePackage(packageType) {
            try {
                // Get authentication token
                const token = localStorage.getItem('authToken') || sessionStorage.getItem('authToken');

                // If not logged in, store the selected package and redirect to auth
                if (!token) {
                    // Store the package selection so we can resume after login
                    localStorage.setItem('selectedPackage', packageType);

                    // Redirect to auth page with package info
                    window.location.href = '/photo-studio-auth?package=' + packageType;
                    return;
                }

                // Disable button and show loading state
                const button = event.target;
                const originalText = button.textContent;
                button.textContent = 'Processing...';
                button.disabled = true;

                // Create Stripe checkout session
                const response = await fetch('/api/photo-studio/create-checkout-session', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({
                        package_type: packageType
                    })
                });

                const data = await response.json();

                if (data.success && data.url) {
                    // Redirect to Stripe checkout
                    window.location.href = data.url;
                } else {
                    throw new Error(data.error || 'Failed to create checkout session');
                }

            } catch (error) {
                console.error('Purchase error:', error);

                // Re-enable button
                if (event && event.target) {
                    event.target.textContent = 'Get Started';
                    event.target.disabled = false;
                }

                // Show error to user
                alert('Failed to start checkout. Please try again or contact support at support@ringlypro.com');
            }
        }

        // Check if user just logged in and needs to continue purchase
        window.addEventListener('DOMContentLoaded', () => {
            const urlParams = new URLSearchParams(window.location.search);
            const justLoggedIn = urlParams.get('logged_in');

            if (justLoggedIn === 'true' && window.location.hash) {
                // Scroll to pricing section if redirected after login
                setTimeout(() => {
                    const pricingSection = document.querySelector(window.location.hash);
                    if (pricingSection) {
                        pricingSection.scrollIntoView({ behavior: 'smooth' });
                    }
                }, 100);
            }
        });

        // FAQ Toggle functionality
        function toggleFaq(element) {
            const faqItem = element.parentElement;
            const wasActive = faqItem.classList.contains('active');

            // Close all FAQ items
            document.querySelectorAll('.faq-item').forEach(item => {
                item.classList.remove('active');
            });

            // Open clicked item if it wasn't already active
            if (!wasActive) {
                faqItem.classList.add('active');
            }
        }
    </script>

