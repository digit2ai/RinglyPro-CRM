<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Purchase Successful - RinglyPro</title>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 500px;
            width: 100%;
            padding: 40px;
            text-align: center;
        }

        .success-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: #10b981;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
        }

        .success-icon svg {
            width: 50px;
            height: 50px;
            color: white;
        }

        h1 {
            color: #1f2937;
            font-size: 2rem;
            margin-bottom: 10px;
        }

        .message {
            color: #6b7280;
            font-size: 1rem;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .loading {
            color: #667eea;
            font-weight: 600;
            margin: 20px 0;
        }

        .spinner {
            border: 3px solid #f3f3f3;
            border-top: 3px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .btn {
            width: 100%;
            padding: 16px;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            transition: transform 0.2s;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .error {
            color: #dc2626;
            background: #fee2e2;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="success-icon">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
        </div>

        <h1>Payment Successful!</h1>

        <div class="message">
            Your tokens are being added to your account.
        </div>

        <div class="spinner" id="spinner"></div>
        <div class="loading" id="loadingText">Processing your purchase...</div>

        <div id="errorMessage" class="error" style="display: none;"></div>

        <button class="btn" onclick="goToDashboard()" id="dashboardBtn" style="display: none;">
            Go to Dashboard
        </button>
    </div>

    <script>
        const sessionId = '<%= sessionId %>';

        async function verifyPayment() {
            try {
                const token = localStorage.getItem('token');

                const response = await fetch(`/api/tokens/verify-payment?session_id=${sessionId}`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const data = await response.json();

                if (data.success) {
                    document.getElementById('loadingText').textContent = 'Tokens added successfully!';
                    document.getElementById('spinner').style.display = 'none';

                    // Auto-redirect after 2 seconds
                    setTimeout(() => {
                        window.location.href = '/';
                    }, 2000);
                } else {
                    showError(data.error || 'Failed to verify payment');
                }
            } catch (error) {
                showError('Network error. Please check your dashboard to confirm tokens were added.');
            }
        }

        function showError(message) {
            document.getElementById('spinner').style.display = 'none';
            document.getElementById('loadingText').style.display = 'none';
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('errorMessage').style.display = 'block';
            document.getElementById('dashboardBtn').style.display = 'block';
        }

        function goToDashboard() {
            window.location.href = '/';
        }

        // Start verification when page loads
        if (sessionId) {
            verifyPayment();
        } else {
            showError('Invalid payment session');
        }
    </script>
</body>
</html>
