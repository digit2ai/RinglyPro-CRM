        .gradient-text {
            background: linear-gradient(135deg, var(--sky), var(--orange));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Plan Card Styles */
        .plan-option {
            display: block;
        }

        .plan-card {
            position: relative;
            transition: all 0.3s ease;
        }

        .plan-radio:checked + .plan-card {
            border-color: var(--orange) !important;
            background: linear-gradient(135deg, rgba(255, 145, 77, 0.1), transparent) !important;
            box-shadow: 0 4px 12px rgba(255, 145, 77, 0.3);
            transform: scale(1.02);
        }

        .plan-badge {
            position: absolute;
            top: -10px;
            right: 16px;
            display: none;
        }

        .plan-radio:checked + .plan-card .plan-badge {
            display: block;
        }

        .professional-plan .plan-badge {
            display: block !important;
        }
    </style>
