    <script>
        let packages = null;

        // Load packages on page load
        async function loadPackages() {
            try {
                const response = await fetch('/api/pixlypro/packages');
                const data = await response.json();

                if (data.success) {
                    packages = data.packages;
                    renderPricingCards();
                }
            } catch (error) {
                console.error('Failed to load packages:', error);
            }
        }

        // Render pricing cards
        function renderPricingCards() {
            if (!packages) return;

            const container = document.getElementById('pricing-cards-container');
            const packageOrder = ['demo', 'starter', 'professional', 'premium'];

            container.innerHTML = packageOrder.map(key => {
                const pkg = packages[key];
                const isFeatured = key === 'professional';

                return `
                    <div class="pricing-card ${isFeatured ? 'featured' : ''}">
                        ${isFeatured ? '<div class="pricing-badge">Most Popular</div>' : ''}
                        <h3>${pkg.name}</h3>
                        <div class="pricing-price">$${pkg.price}</div>
                        <div class="pricing-description">
                            <p>${pkg.description}</p>
                            <p style="margin-top: 1rem; font-weight: 600; color: #0a0a0a;">
                                ${pkg.photos_to_receive} AI-Enhanced Photo${pkg.photos_to_receive > 1 ? 's' : ''}
                            </p>
                        </div>
                        <a href="#" onclick="handleSelectPackage('${key}')" class="btn ${isFeatured ? 'btn-primary' : 'btn-secondary'}" style="width: 100%; margin-top: 1rem;">
                            Select ${pkg.name}
                        </a>
                    </div>
                `;
            }).join('');
        }

        // Handle get started - redirect to auth page
        async function handleGetStarted() {
            window.location.href = '/pixlypro-auth';
        }

        // Handle package selection
        function handleSelectPackage(packageType) {
            const token = localStorage.getItem('token');
            if (!token) {
                alert('Please log in or create an account to continue.');
                window.location.href = '/login';
                return;
            }

            window.location.href = `/pixlypro-upload?package=${packageType}`;
        }

        // FAQ Toggle functionality
        function toggleFaq(element) {
            const faqItem = element.parentElement;
            const wasActive = faqItem.classList.contains('active');

            document.querySelectorAll('.faq-item').forEach(item => {
                item.classList.remove('active');
            });

            if (!wasActive) {
                faqItem.classList.add('active');
            }
        }

        // Initialize
        window.addEventListener('DOMContentLoaded', () => {
            loadPackages();
        });
    </script>
