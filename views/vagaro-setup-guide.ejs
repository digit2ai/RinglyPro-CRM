        function copyEmailTemplate(templateId) {
            const template = document.getElementById(templateId + '-template');
            const button = event.target;

            navigator.clipboard.writeText(template.textContent.trim()).then(() => {
                button.textContent = 'Copied!';
                button.classList.add('copied');

                setTimeout(() => {
                    button.textContent = 'Copy Email';
                    button.classList.remove('copied');
                }, 2000);
            });
        }

        function copyToClipboard(elementId) {
            const element = document.getElementById(elementId);
            const button = event.target;

            navigator.clipboard.writeText(element.textContent.trim()).then(() => {
                button.textContent = 'Copied!';
                button.classList.add('copied');

                setTimeout(() => {
                    button.textContent = 'Copy';
                    button.classList.remove('copied');
                }, 2000);
            });
